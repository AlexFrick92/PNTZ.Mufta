<UserControl x:Class="Desktop.Layout.RootControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop.Layout"
             xmlns:ctrl="clr-namespace:Desktop.Control"
             mc:Ignorable="d" 
             x:Name="this"
             d:DesignHeight="760" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Desktop;component/Styles/LayoutBlueStyle.xaml"/>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="GridSplitter" x:Key="HorizontalLayoutSplitter">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="ShowsPreview" Value="False"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Height" Value="5"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource Color1Brush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        
        
        
        <!--****************************************** LEFTSIDE BAR **************************************************************-->

        <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Style="{StaticResource OutlineBorder}" BorderThickness="0,1,1,0" 
                Background="{StaticResource Color2Brush}">
            <ContentControl Content="{Binding LeftSidebar, ElementName=this}"/>
        </Border>

        <!--****************************************** MAIN CONTENT **************************************************************-->

        <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource OutlineBorder}" BorderThickness="0,1,0,0">
            <ContentControl Content="{Binding MainContent, ElementName=this}"/>
        </Border>

        <!--****************************************** OUTPUT BAR **************************************************************-->

        <GridSplitter Grid.Column="1" Grid.Row="2" Style="{StaticResource HorizontalLayoutSplitter}"/>

        <Border Grid.Column="1" Grid.Row="3" Style="{StaticResource OutlineBorder}"  BorderThickness="0,1,0,0" Background="{StaticResource Color2Brush}">
            <ContentControl Grid.Row="1" Content="{Binding OutputBar, ElementName=this}"/>
        </Border>

        <!--****************************************** STATUS BAR **************************************************************-->

        <Border Grid.ColumnSpan="2" Grid.Row="4" Style="{StaticResource OutlineBorder}" BorderThickness="0,1,0,0" Background="{StaticResource Color2Brush}">
            <ContentControl Content="{Binding StatusBar, ElementName=this}" />
        </Border>
    </Grid>
</UserControl>
