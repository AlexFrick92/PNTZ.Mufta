<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Joint.JointProcessDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Joint"
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Joint"
             xmlns:ctrl="clr-namespace:PNTZ.Mufta.TPCApp.View.Control"
             xmlns:vt="clr-namespace:PNTZ.Mufta.TPCApp.View.Control.ValueTypes"
             xmlns:converter="clr-namespace:PNTZ.Mufta.TPCApp.View.Converter"
             xmlns:domain="clr-namespace:PNTZ.Mufta.TPCApp.Domain"
             d:DataContext="{d:DesignInstance Type=viewmodel:JointProcessDataViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="950" d:DesignWidth="800">


    <!-- ========================================
         РЕСУРСЫ
         ======================================== -->

    <UserControl.Resources>

        <!-- ========================================
        КОНВЕРТЕРЫ
        ======================================== -->

        <converter:ResultTotalToStringConverter x:Key="ResultTotalToStringConverter"/>
        <converter:NullToVisibilityConverter x:Key="NullToVisConverter"/>
        <converter:JointModeToVisibilityConverter x:Key="JointModeToVisConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>


        <!-- ========================================
        СТИЛИ
        ======================================== -->

        <!--Заголовок-->
        <Style x:Key="ParamHeaderLabel" TargetType="Label">
            <Setter Property="FontSize" Value="{DynamicResource JointProcess_ParamHeader_FontSize}"/>
            <Setter Property="FontWeight" Value="{DynamicResource JointProcess_ParamHeader_FontWeight}"/>
            <Setter Property="FontFamily" Value="{DynamicResource JointProcess_ParamHeader_FontFamily}"/>
            <Setter Property="Foreground" Value="{DynamicResource JointProcess_ParamHeader_Foreground}"/>
        </Style>
        <!--Линия под заголовком-->
        <Style x:Key="HeaderUnderStroke" TargetType="Border">
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource JointProcess_ParamHeader_Foreground}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </UserControl.Resources>


    <!-- ========================================
    СТЭК ПАРАМЕТРОВ
    ======================================== -->
    <StackPanel Orientation="Vertical" Grid.IsSharedSizeScope="True">
        <Label Style="{StaticResource ParamHeaderLabel}" Content="{StaticResource JointProcess_CurrentReadings}"/>
        <Border Style="{StaticResource HeaderUnderStroke}"/>

        <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_Torque_Label}" Value="{Binding ActualPoint.Torque, Mode=OneWay}" State="Normal">
            <ctrl:ParameterDisplayControl.ValueType>
                <vt:FloatValueType StringFormat="N0"/>
            </ctrl:ParameterDisplayControl.ValueType>
        </ctrl:ParameterDisplayControl>
        <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_Length_Label}" Value="{Binding ActualPoint.Length_mm, Mode=OneWay}" State="Normal">
            <ctrl:ParameterDisplayControl.ValueType>
                <vt:FloatValueType StringFormat="N1"/>
            </ctrl:ParameterDisplayControl.ValueType>
        </ctrl:ParameterDisplayControl>
        <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_Turns_Label}" Value="{Binding ActualPoint.Turns, Mode=OneWay}" State="Normal">
            <ctrl:ParameterDisplayControl.ValueType>
                <vt:FloatValueType StringFormat="N2"/>
            </ctrl:ParameterDisplayControl.ValueType>
        </ctrl:ParameterDisplayControl>
        <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_TurnsPerMinute_Label}" Value="{Binding ActualPoint.TurnsPerMinute, Mode=OneWay}" State="Normal">
            <ctrl:ParameterDisplayControl.ValueType>
                <vt:FloatValueType StringFormat="N0"/>
            </ctrl:ParameterDisplayControl.ValueType>
        </ctrl:ParameterDisplayControl>
        <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_ElapsedTime_Label}" Value="{Binding SecondsFromBeginJointing, Mode=OneWay}" State="Normal">
            <ctrl:ParameterDisplayControl.ValueType>
                <vt:FloatValueType StringFormat="N0"/>
            </ctrl:ParameterDisplayControl.ValueType>
        </ctrl:ParameterDisplayControl>

        <!--Данные рецепта и результа отображаем только если загружен рецепт-->
        <StackPanel Orientation="Vertical" Visibility="{Binding LoadedRecipe, Converter={StaticResource NullToVisConverter}}">
            <Label Style="{StaticResource ParamHeaderLabel}" Content="{StaticResource JointProcess_Result}"/>
            <Border Style="{StaticResource HeaderUnderStroke}"/>

            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_Evaluation_Label}"
                                      Value="{Binding JointResult.ResultTotal, Converter={StaticResource ResultTotalToStringConverter}, Mode=OneWay}"
                                      State="{Binding ResultTotalState}"/>

            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_FinalTorque_Label}"
                                      Value="{Binding JointResult.FinalTorque, Mode=OneWay}"
                                      State="{Binding ResultTorqueState}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>

            <!--Итог буртик отображаем только в режиме с буртиком-->
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_FinalShoulderTorque_Label}"
                                      Value="{Binding JointResult.FinalShoulderTorque, Mode=OneWay}"
                                      State="{Binding ResultShoulderState}"
                                      Visibility="{Binding IsShoulderMode, Converter={StaticResource BoolToVis}}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>

            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_FinalLength_Label}"
                                      Value="{Binding JointResult.FinalLength, Mode=OneWay}"
                                      State="{Binding ResultLengthState}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N1"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MakeupLength_Label}"
                                      Value="{Binding JointResult.FinalMakeupLength_mm, Mode=OneWay}"
                                      State="Normal">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N1"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MVSLength_Label}"
                                      Value="{Binding JointResult.MVS_Len_mm, Mode=OneWay}"
                                      State="Normal">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N1"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_FinalTurns_Label}"
                                      Value="{Binding JointResult.FinalTurns, Mode=OneWay}"
                                      State="Normal">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N2"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            
            <Label Style="{StaticResource ParamHeaderLabel}" Content="{StaticResource JointProcess_RecipeData}"/>
            <Border Style="{StaticResource HeaderUnderStroke}"/>

            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_OptimalTorque_Label}"
                                          Value="{Binding LoadedRecipe.MU_Tq_Opt, Mode=OneWay}"
                                          State="Normal">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MaxTorque_Label}"
                                          Value="{Binding LoadedRecipe.MU_Tq_Max, Mode=OneWay}"
                                          State="Normal">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MinTorque_Label}"
                                          Value="{Binding LoadedRecipe.MU_Tq_Min, Mode=OneWay}"
                                          State="Normal">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_DumpTorque_Label}"
                                          Value="{Binding LoadedRecipe.MU_Tq_Dump, Mode=OneWay}"
                                          State="Normal">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <Label/>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MaxLength_Label}"
                                          Value="{Binding LoadedRecipe.MU_Len_Max, Mode=OneWay}"
                                          State="Normal"
                                          Visibility="{Binding IsLengthMode, Converter={StaticResource BoolToVis}}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N1"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MinLength_Label}"
                                          Value="{Binding LoadedRecipe.MU_Len_Min, Mode=OneWay}"
                                          State="Normal"
                                          Visibility="{Binding IsLengthMode, Converter={StaticResource BoolToVis}}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N1"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_DumpLength_Label}"
                                          Value="{Binding LoadedRecipe.MU_Len_Dump, Mode=OneWay}"
                                          State="Normal"
                                          Visibility="{Binding IsLengthMode, Converter={StaticResource BoolToVis}}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N1"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>

            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MaxShoulderTorque_Label}"
                                          Value="{Binding LoadedRecipe.MU_TqShoulder_Max, Mode=OneWay}"
                                          State="Normal"
                                          Visibility="{Binding IsShoulderMode, Converter={StaticResource BoolToVis}}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>
            <ctrl:ParameterDisplayControl Label="{DynamicResource JointProcess_MinShoulderTorque_Label}"
                                          Value="{Binding LoadedRecipe.MU_TqShoulder_Min, Mode=OneWay}"
                                          State="Normal"
                                          Visibility="{Binding IsShoulderMode, Converter={StaticResource BoolToVis}}">
                <ctrl:ParameterDisplayControl.ValueType>
                    <vt:FloatValueType StringFormat="N0"/>
                </ctrl:ParameterDisplayControl.ValueType>
            </ctrl:ParameterDisplayControl>


        </StackPanel>
        <Label Style="{StaticResource ParamHeaderLabel}" Foreground="DarkRed" HorizontalAlignment="Center" Margin="10"
               Content="Загрузите рецепт!" Visibility="{Binding LoadedRecipe, Converter={StaticResource NullToVisConverter}, ConverterParameter=invert}"/>
    </StackPanel>

</UserControl>
