<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Joint.JointResultAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Joint"
             xmlns:ctrl="clr-namespace:PNTZ.Mufta.TPCApp.View.Control"
             xmlns:vmJoint="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Joint"
             d:DataContext="{d:DesignInstance Type=vmJoint:JointResultAnalysisViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <!-- Правая панель: график анализа -->
        <Border Grid.Column="0"
        Background="White"
        Padding="5">
            <ctrl:ChartView DataContext="{Binding AnalysisChart}"/>
        </Border>

        <!-- Левая панель: управление детектором заплечника -->
        <Border Grid.Column="1"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,1,0"
                Padding="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                                                
                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                           Text="Детектор заплечника"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <!-- Панель управления -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- WindowSize -->
                        <ctrl:ParameterDisplayControl Label="Окно сглаживания момента"
                                Value="{Binding WindowSize, ValidatesOnExceptions=True}"
                                StringFormat="F0"
                                IsReadOnly="False"
                                InputType="Integer"/>

                        <!-- DerivativeWindowSize -->
                        <TextBlock Text="Размер окна производной (DerivativeWindowSize):"
                                   FontSize="11"
                                   Margin="0,0,0,3"/>
                        <TextBox x:Name="TxtDerivativeWindowSize"
                                 Text="15"
                                 Padding="5"
                                 Margin="0,0,0,10"/>

                        <!-- SigmaMultiplier -->
                        <TextBlock Text="Множитель σ (SigmaMultiplier):"
                                   FontSize="11"
                                   Margin="0,0,0,3"/>
                        <TextBox x:Name="TxtSigmaMultiplier"
                                 Text="10.0"
                                 Padding="5"
                                 Margin="0,0,0,10"/>

                        <!-- SearchStartRatio -->
                        <TextBlock Text="Начало поиска (SearchStartRatio):"
                                   FontSize="11"
                                   Margin="0,0,0,3"/>
                        <TextBox x:Name="TxtStartWindow"
                                  Text="0.7"
                                  Padding="5"
                                  Margin="0,0,0,10"/>

                        <!-- Кнопка расчета -->
                        <Button x:Name="BtnRunDetection"
                                Content="⚙ Выполнить расчёт"
                                Click="BtnRunDetection_Click"
                                Padding="10,8"
                                Background="#E67E22"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,5,0,10"/>

                        <!-- Чекбоксы отображения -->
                        <TextBlock Text="Отображение:"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5"/>

                        <CheckBox x:Name="ChkShowSmoothedTorque"
                                  Content="Сглаженный момент"
                                  IsChecked="True"
                                  Margin="0,0,0,3"
                                  FontSize="11"
                                  Checked="ChkVisibility_Changed"
                                  Unchecked="ChkVisibility_Changed"/>

                        <CheckBox x:Name="ChkShowDerivative"
                                  Content="Производная"
                                  IsChecked="True"
                                  Margin="0,0,0,3"
                                  FontSize="11"
                                  Checked="ChkVisibility_Changed"
                                  Unchecked="ChkVisibility_Changed"/>

                        <CheckBox x:Name="ChkShowSigmaLines"
                                  Content="Линии сигм (+1σ, +2σ...)"
                                  IsChecked="True"
                                  Margin="0,0,0,3"
                                  FontSize="11"
                                  Checked="ChkVisibility_Changed"
                                  Unchecked="ChkVisibility_Changed"/>

                        <CheckBox x:Name="ChkShowThreshold"
                                  Content="Линия порога (Threshold)"
                                  IsChecked="True"
                                  Margin="0,0,0,3"
                                  FontSize="11"
                                  Checked="ChkVisibility_Changed"
                                  Unchecked="ChkVisibility_Changed"/>

                        <CheckBox x:Name="ChkShowBaseline"
                                  Content="Базовая линия (Baseline)"
                                  IsChecked="True"
                                  Margin="0,0,0,10"
                                  FontSize="11"
                                  Checked="ChkVisibility_Changed"
                                  Unchecked="ChkVisibility_Changed"/>

                        <!-- Результат -->
                        <Border Background="#E8F4F8"
                                BorderBrush="#3498DB"
                                BorderThickness="1"
                                CornerRadius="3"
                                Padding="8">
                            <TextBlock x:Name="DetectionResultText"
                                       Text="Расчёт не выполнен"
                                       FontSize="11"
                                       Foreground="#2C3E50"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
