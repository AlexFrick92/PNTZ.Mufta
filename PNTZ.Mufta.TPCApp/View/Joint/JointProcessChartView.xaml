<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Joint.JointProcessChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Joint"
             xmlns:ctrl="clr-namespace:PNTZ.Mufta.TPCApp.View.Control"
             xmlns:vmJoint="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Joint"
             d:DataContext="{d:DesignInstance Type=vmJoint:JointProcessChartViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>

        <!-- Момент/обороты -->
        <Border BorderThickness="0,0,1,1"
                BorderBrush="LightGray"
                Grid.Row="0" Grid.Column="0">
            <ctrl:ChartView DataContext="{Binding TorqueTurnsChart}"/>
        </Border>

        <!-- (Обороты/Мин)/обороты -->
        <Border BorderThickness="0,0,1,1"
                BorderBrush="LightGray"
                Grid.Row="1" Grid.Column="0">
            <ctrl:ChartView DataContext="{Binding TurnsPerMinuteTurnsChart}"/>
        </Border>

        <!-- Момент/длина -->
        <Border BorderThickness="0,0,1,1"
                BorderBrush="LightGray"
                Grid.Row="0" Grid.Column="1">
            <ctrl:ChartView DataContext="{Binding TorqueLengthChart}"/>
        </Border>

        <!-- Момент/время -->
        <Border BorderThickness="0,0,1,1"
                BorderBrush="LightGray"
                Grid.Row="1" Grid.Column="1">
            <ctrl:ChartView DataContext="{Binding TorqueTimeChart}"/>
        </Border>

    </Grid>
</UserControl>
