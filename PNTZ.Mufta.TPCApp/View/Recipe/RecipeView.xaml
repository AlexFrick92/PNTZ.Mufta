<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.RecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             xmlns:joint="clr-namespace:PNTZ.Mufta.TPCApp.Domain"
             xmlns:view="clr-namespace:PNTZ.Mufta.TPCApp.View" 
             
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:RecipeViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1600"             
             >

    <UserControl.InputBindings>
        <KeyBinding Key="OemPlus" Modifiers="Ctrl" Command="{Binding NewRecipeCommand}" />
    </UserControl.InputBindings>

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <view:EnumToCollectionConverter x:Key="EnumToCollectionConverter"/>
            <local:EnumEqualityConverter x:Key="EnumEqualityConverter" />

            <!-- Поля ввода-->
            <Style x:Key="InputField" TargetType="TextBox">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="MinWidth" Value="80"/>
                <Setter Property="Width" Value="80"/>
            </Style>
            <Style x:Key="InputFieldLabel" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="MinWidth" Value="180"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>

            <!--Заголовок параметров-->
            <Style x:Key="ParamHeaderLabel" TargetType="Label">
                <Setter Property="FontWeight" Value="Medium"/>
            </Style>
            <Style x:Key="HeaderUnderStroke" TargetType="Border">
                <Setter Property="BorderThickness" Value="0,1,0,0"/>
                <Setter Property="BorderBrush" Value="{StaticResource GridColor}"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style TargetType="FrameworkElement" x:Key="RecipeEditableStyle">
                <Setter Property="Visibility" Value="Collapsed"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RecipeEditable}" Value="True">
                        <Setter Property="Visibility" Value="Visible"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <!--****************************************** СПИСОК РЕЦЕПТОВ В ПАПКЕ СЛЕВА **************************************************************-->

        <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}" Background="{StaticResource LightColor}">
            <Grid Grid.Row="0" Grid.Column="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label                        
                        Content="Список рецептов"
                        FontSize="18"  
                        
                        Margin="4"  
                        BorderThickness="0"                                        
                        />



                <Border  Grid.Column="1" Margin="5" BorderBrush="{StaticResource GridColor}" >
                    <Button BorderThickness="0" BorderBrush="{StaticResource GridColor}"
                            Background="{StaticResource LightColor}"
                            Command="{Binding NewRecipeCommand}"                     
                                 >
                        <StackPanel  Orientation="Horizontal">
                            <Label FontSize="14">📄 Создать</Label>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>

            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="{StaticResource GridColor}"
                     BorderThickness="0,0,0,1">
                <Grid>
                    <TextBox 
                        x:Name="RecipeNameTextBox"
                        Text="{Binding RecipeNameFilter, UpdateSourceTrigger=PropertyChanged}"                         
                        FontSize="14"
                        Height="30" 
                        Padding="5"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"     
                        TextChanged="RecipeNameTextBox_TextChanged"
                    />
                    <Label
                         x:Name="RecipeNameWatermark"
                         TextBlock.FontStyle="Italic"
                         TextBlock.Foreground="Gray"
                         Padding="5,0,0,0"
                         VerticalAlignment="Center"
                         IsHitTestVisible="False"
                         Content="Выберите наименование рецепта"  
                         Margin="5,0,0,0"
                     />
                </Grid>
            </Border>

            <ListBox Grid.Row="1" ItemsSource="{Binding JointRecipes}" SelectedItem="{Binding SelectedJointRecipe}"
                     BorderThickness="0"
                     HorizontalContentAlignment="Stretch"                     
                     >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="2,2,2,4" Padding="0,0,0,4" BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Label                                                                                                                                             
                                    Content="{Binding Name}"
                                    FontSize="14"
                                    Background="Transparent"                                                                                                                                                      
                                    />

                                <Label 
                                    Grid.Column="1"                                    
                                    Background="Transparent"
                                    >

                                    <TextBlock Text="{Binding TimeStamp, StringFormat='{}{0:dd.MM.yyyy}'}" />
                                </Label>

                                <TextBlock                                    
                                    Grid.Column="0" Grid.ColumnSpan="2"
                                    Grid.Row="1"                                          
                                    Background="Transparent"                                    
                                    Text="{Binding SelectedMode}"                                    
                                    VerticalAlignment="Center"
                                />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!--РАЗДЕЛИТЕЛЬ-->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" 
                Margin="0,0,0,-5"
            BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridColor}">

        </Border>

        <!--****************************************** РЕДАКТИРОВАНИЕ РЕЦЕПТА **************************************************************-->
        <Grid Grid.Row="0" Grid.Column="2">
            <Grid.Resources>


            </Grid.Resources>

            <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}" Background="{StaticResource LightColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label                 
                        Grid.Column="0"
                        Content="Редактирование рецепта"
                        FontSize="18"
                        Margin="4"
                        BorderThickness="0"                        
                        />
                    <Label
                        Grid.Column="1"
                        Content="{Binding EditRecipe.Name}"
                        FontSize="18"
                        Margin="4"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>

                    <!-- КНОПКИ РЕЦЕПТА -->
                    <Border  Grid.Column="2" Margin="5" BorderBrush="{StaticResource GridColor}" Style="{StaticResource RecipeEditableStyle}">
                        <Button BorderThickness="0" BorderBrush="{StaticResource GridColor}"
                            Background="{StaticResource LightColor}"
                            Command="{Binding RemoveRecipe}"                     
                                 >
                            <StackPanel  Orientation="Horizontal">
                                <Label FontSize="14">🗑️ Удалить</Label>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Border  Grid.Column="3" Margin="0,5,5,5" BorderBrush="{StaticResource GridColor}" Style="{StaticResource RecipeEditableStyle}">
                        <Button BorderThickness="0" BorderBrush="{StaticResource GridColor}"
                            Background="{StaticResource LightColor}"
                            Command="{Binding SaveRecipe}"                     
                                 >
                            <StackPanel  Orientation="Horizontal">
                                <Label FontSize="14" >💾 Сохранить</Label>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Border  Grid.Column="4" Margin="0,5,5,5" BorderBrush="{StaticResource GridColor}" Style="{StaticResource RecipeEditableStyle}">
                        <Button BorderThickness="0" BorderBrush="{StaticResource GridColor}"
                            Background="{StaticResource LightColor}"
                            Command="{Binding LoadRecipeCommand}"                     
                                 >
                            <StackPanel  Orientation="Horizontal">
                                <Label FontSize="14">🡇 Загрузить</Label>
                            </StackPanel>
                        </Button>
                    </Border>

                </Grid>
            </Border>
        </Grid>

        <!--Фоновый текст-->
        <Label
                Grid.Row="1" Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="Выберите рецепт слева или создайте новый"
                FontStyle="Italic"
                FontSize="18"
                Foreground="{StaticResource GridColor}"
                BorderThickness="0"
                          
                >
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding RecipeEditable}" Value="True">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Grid Grid.Row="1" Grid.Column="2"               
              Style="{StaticResource RecipeEditableStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!--********************* ПАРАМЕТРЫ РЕЦЕПТА ДЛЯ ВСЕХ РЕЖИМОВ ***************************-->
            <Grid Grid.Row="1" Margin="5" Width="950" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--********************* ОБЩИЕ ПАРАМЕТРЫ ***************************-->

                <!--ЗАГОЛОВОК-->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <Label Style="{StaticResource ParamHeaderLabel}" Content="⚙️ Общие параметры"/>
                    <Border Style="{StaticResource HeaderUnderStroke}"/>
                </StackPanel>

                <!--ПАРАМЕТРЫ-->
                <Label Grid.Row="2" Grid.Column="0"
                            Style="{StaticResource InputFieldLabel}" Content="Обороты на откр. гол., n"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                            x:Name="Input_HeadOpen" PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.HEAD_OPEN_PULSES, ValidatesOnExceptions=True, StringFormat=F2}"/>


                <Label Grid.Row="3" Grid.Column="0"
                            Style="{StaticResource InputFieldLabel}" Content="Обороты развинчивание, n"/>
                <TextBox Grid.Row="3" Grid.Column="1"
                            x:Name="Input_TurnsBreak" PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.TURNS_BREAK, ValidatesOnExceptions=True, StringFormat=F2}"/>


                <Label Grid.Row="4" Grid.Column="0"
                            Style="{StaticResource InputFieldLabel}" Content="Тип резьбы"/>
                <ComboBox Grid.Row="4" Grid.Column="1"
                            ItemsSource="{Binding Path=EditRecipe.SelectedThreadType, Converter={StaticResource EnumToCollectionConverter}, Mode=OneWay}" 
                            SelectedValuePath="Value"
                            DisplayMemberPath="Description"
                            SelectedValue="{Binding Path=EditRecipe.SelectedThreadType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                            Width="80"                                   
                          
                            HorizontalAlignment="Left"                                                                             
                            HorizontalContentAlignment="Center"
                          />

                <Label Grid.Row="5" Grid.Column="0" 
                            Style="{StaticResource InputFieldLabel}" Content="Шаг резьбы, m/n"/>
                <TextBox Grid.Row="5" Grid.Column="1"
                            x:Name="Input_Thread_step" PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.Thread_step, ValidatesOnExceptions=True}"/>


                <Label Grid.Row="6" Grid.Column="0" 
                            Style="{StaticResource InputFieldLabel}" Content="Программа SPS"/>

                <TextBox Grid.Row="6" Grid.Column="1"
                            x:Name="Input_SpsNum" PreviewTextInput="IntInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.PLC_PROGR_NUM, ValidatesOnExceptions=True}"/>

                <!--********************* ДАННЫЕ МУФТЫ ***************************-->


                <!--ЗАГОЛОВОК-->
                <StackPanel Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
                    <Label Style="{StaticResource ParamHeaderLabel}" Content="🔩 Данные муфты"/>
                    <Border Style="{StaticResource HeaderUnderStroke}"/>
                </StackPanel>

                <!--ПАРАМЕТРЫ-->

                <Label Grid.Row="2" Grid.Column="2"
                    Style="{StaticResource InputFieldLabel}" Content="Мин. длина"/>
                <TextBox Grid.Row="2" Grid.Column="3"
                    x:Name="Input_BoxMax" PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" 
                         Text="{Binding EditRecipe.Box_Len_Min, ValidatesOnExceptions=True, StringFormat=F1}"/>


                <Label Grid.Row="3" Grid.Column="2"
                    Style="{StaticResource InputFieldLabel}" Content="Макс. длина"/>
                <TextBox Grid.Row="3" Grid.Column="3"
                    x:Name="Input_BoxMin" PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" 
                         Text="{Binding EditRecipe.Box_Len_Max, ValidatesOnExceptions=True, StringFormat=F1}"/>

                <Label Grid.Row="4" Grid.Column="2"
                    Style="{StaticResource InputFieldLabel}" Content="Время наблюдения"/>
                <TextBox Grid.Row="4" Grid.Column="3"
                    x:Name="Input_BoxTime" PreviewTextInput="IntInputPreview" Style="{StaticResource InputField}" 
                         Text="{Binding EditRecipe.Box_Moni_Time, ValidatesOnExceptions=True}" />


                <!--********************* ДАННЫЕ ПРЕДНАВЁРТКИ ***************************-->

                <!--ЗАГОЛОВОК-->
                <StackPanel Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2">
                    <Label Style="{StaticResource ParamHeaderLabel}" Content="🔧 Преднавёртка"/>
                    <Border Style="{StaticResource HeaderUnderStroke}"/>
                </StackPanel>

                <!--ПАРАМЕТРЫ-->

                <Label Grid.Row="7" Grid.Column="2"
                    Style="{StaticResource InputFieldLabel}" Content="Мин. длина"/>
                <TextBox Grid.Row="7" Grid.Column="3"                    
                    x:Name="Input_PreMax" PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.Pre_Len_Min, ValidatesOnExceptions=True, StringFormat=F1}"/>

                <Label Grid.Row="8" Grid.Column="2"
                    Style="{StaticResource InputFieldLabel}" Content="Макс. длина"/>
                <TextBox Grid.Row="8" Grid.Column="3"
                    x:Name="Input_PreMin" PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.Pre_Len_Max, ValidatesOnExceptions=True, StringFormat=F1}"/>

                <Label Grid.Row="9" Grid.Column="2"
                    Style="{StaticResource InputFieldLabel}" Content="Время наблюдения"/>
                <TextBox Grid.Row="9" Grid.Column="3"
                    x:Name="Input_PreTime" PreviewTextInput="IntInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.Pre_Moni_Time, ValidatesOnExceptions=True}" />

                <!--////////////////////////////// ПАРАМЕТРЫ ДЛЯ ВСЕХ РЕЖИМОВ ***************************-->
            </Grid>

            <!--********************* ВЫБОР РЕЖИМА **********************************************-->
            <Grid Grid.Row="2" Width="950" HorizontalAlignment="Left">
                <Grid.Resources>


                    <Style x:Key="BorderSeparatorStyle" TargetType="Border">
                        <Setter Property="BorderBrush" Value="#cecece"/>
                        <Setter Property="BorderThickness" Value="1,0,0,0"/>
                        <Setter Property="Margin" Value="2,2,2,2"/>
                    </Style>

                    <Style TargetType="Button" x:Key="SelectModeButtonColored">

                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="0"/>

                        <Setter Property="Margin" Value="3"/>
                        <Setter Property="Command" Value="{Binding SetModeCommand}"/>

                        <Setter Property="Height" Value="75"/>
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="CommandParameter" Value="{Binding Tag, RelativeSource={RelativeSource Self}}"/>

                        <Style.Triggers>
                            <DataTrigger Value="True">
                                <DataTrigger.Binding>
                                    <MultiBinding Converter="{StaticResource EnumEqualityConverter}">
                                        <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                                        <Binding Path="EditRecipe.JointMode" />
                                    </MultiBinding>
                                </DataTrigger.Binding>
                                <DataTrigger.Setters>
                                    <Setter Property="Background" Value="LightGray" />
                                </DataTrigger.Setters>
                            </DataTrigger>
                        </Style.Triggers>

                    </Style>
                    <Style TargetType="Label" x:Key="SelectModeButtonLabel">
                        <Setter Property="FontSize" Value="11"/>
                        <Setter Property="Foreground" Value="DimGray"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>

                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>

                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>

                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>

                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>

                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <StackPanel Orientation="Vertical" Grid.Column="0" Grid.ColumnSpan="11" Grid.Row="0" 
                            Margin="5,1,5,5">
                    <Label Content="🛠️ Режим свинчивания" Style="{StaticResource ParamHeaderLabel}"/>
                    <Border Style="{StaticResource HeaderUnderStroke}"/>
                </StackPanel>



                <Button Tag="{x:Static joint:JointMode.Torque}" Grid.Column="0" Grid.Row="1" 
                        Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image 
                            Grid.Row="0"
                            Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorque.png"/>
                        <Label
                            Grid.Row="1"  
                            Style="{StaticResource SelectModeButtonLabel}"
                            Content="МОМЕНТ"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}" Grid.Column="1" Grid.Row="1"/>

                <Button Tag="{x:Static joint:JointMode.TorqueShoulder}" Grid.Column="2" Grid.Row="1" 
                        Style="{StaticResource SelectModeButtonColored}"
                        >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image 
                            Grid.Row="0"
                            Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorqueShoulder.png"/>
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource SelectModeButtonLabel}"
                            Content="МОМЕНТ и ВЫСТУП"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}" Grid.Column="3" Grid.Row="1"/>

                <Button Tag="{x:Static joint:JointMode.Length}" Grid.Column="4" Grid.Row="1"  
                        Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image 
                            Grid.Row="0"
                            Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeLength.png"/>
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource SelectModeButtonLabel}"
                            Content="ДЛИНА"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}" Grid.Column="5" Grid.Row="1"/>

                <Button Tag="{x:Static joint:JointMode.TorqueLength}" Grid.Column="6" Grid.Row="1"
                        Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image 
                            Grid.Row="0"
                            Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorqueLength.png"/>
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource SelectModeButtonLabel}"
                            Content="МОМЕНТ и ДЛИНА"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}" Grid.Column="7" Grid.Row="1"/>

                <Button Tag="{x:Static joint:JointMode.Jval}" Grid.Column="8" Grid.Row="1" 
                        Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image 
                            Grid.Row="0"
                            Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeJValue.png"/>
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource SelectModeButtonLabel}"
                            Content="ЗНАЧЕНИЕ J"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}" Grid.Column="9" Grid.Row="1"/>

                <Button Tag="{x:Static joint:JointMode.TorqueJVal}" Grid.Column="10" Grid.Row="1" 
                        Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Image 
                            Grid.Row="0"
                            Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorqueJValue.png"/>
                        <Label
                            Grid.Row="1"
                            Style="{StaticResource SelectModeButtonLabel}"
                            Content="МОМЕНТ и J"/>
                    </Grid>
                </Button>

            </Grid>

            <!-- ******************** НАСТРОЙКИ ДЛЯ ВЫБРАННОГО РЕЖИМА ***************************** -->
            <Grid Grid.Row="3" Margin="5" Width="950" HorizontalAlignment="Left">

                <!-- ******************** РЕЖИМ: ПО-МОМЕНТУ ( С ПЛЕЧЕМ И БЕЗ) ***************************** -->
                <Grid>
                    <Grid.Resources>
                        <!--Видимость лейблов для режима с плечом-->
                        <Style TargetType="Label" x:Key="ShoulderModeLabelVisibility" BasedOn="{StaticResource InputFieldLabel}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueShoulder}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                        <!--Видимость полей для режима с плечом-->
                        <Style TargetType="TextBox" x:Key="ShoulderModeInputVisibility" BasedOn="{StaticResource InputField}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueShoulder}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.Torque}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueShoulder}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

