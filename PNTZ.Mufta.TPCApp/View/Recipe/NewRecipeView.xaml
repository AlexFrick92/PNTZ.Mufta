<Window x:Class="PNTZ.Mufta.TPCApp.View.Recipe.NewRecipeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
        xmlns:conv="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        
        xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel"
        xmlns:domain="clr-namespace:PNTZ.Mufta.TPCApp.Domain"
        xmlns:view="clr-namespace:PNTZ.Mufta.TPCApp.View"

        d:DataContext="{d:DesignInstance Type=viewmodel:NewRecipeViewModel}"


        Title="Создание рецепта" Height="300" Width="600">

    <Window.Style>
        <Style TargetType="Window">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBasedOnExisting}" Value="True">
                    <Setter Property="Title" Value="Дублирование рецепта"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>

    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding CancelCmd}"/>
        <KeyBinding Key="Enter" Command="{Binding CreateRecipeCmd}"/>
    </Window.InputBindings>

    <Window.Resources>
        <view:EnumEqualityConverter x:Key="EnumEqualityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <conv:JointModeToStringConverter x:Key="JointModeToStringConverter"/>

        <Style x:Key="BorderSeparatorStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#cecece"/>
            <Setter Property="BorderThickness" Value="1,0,0,0"/>
            <Setter Property="Margin" Value="2,2,2,2"/>
        </Style>

        <Style TargetType="Button" x:Key="SelectModeButtonColored">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Command" Value="{Binding SetModeCommand}"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="CommandParameter" Value="{Binding Tag, RelativeSource={RelativeSource Self}}"/>

            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource EnumEqualityConverter}">
                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                            <Binding Path="Recipe.JointMode" />
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <DataTrigger.Setters>
                        <Setter Property="Background" Value="LightGray" />
                    </DataTrigger.Setters>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label" x:Key="SelectModeButtonLabel">
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Foreground" Value="DimGray"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="DarkGray" BorderThickness="3">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Название рецепта -->
            <Label Grid.Row="0" Content="Введите название рецепта:" FontWeight="Bold" Margin="0,0,0,5"/>

            <TextBox Grid.Row="1"
                     x:Name="inputField"
                     BorderThickness="0,0,0,1"
                     BorderBrush="Gray"
                     Margin="0,0,0,15"
                     Text="{Binding RecipeName, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Выбор режима (скрывается при дублировании) -->
            <Label Grid.Row="2" Content="Выберите режим свинчивания:" FontWeight="Bold" Margin="0,0,0,5">
                <Label.Style>
                    <Style TargetType="Label">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBasedOnExisting}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

            <WrapPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <WrapPanel.Style>
                    <Style TargetType="WrapPanel">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBasedOnExisting}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </WrapPanel.Style>
                <Button Tag="{x:Static domain:JointMode.Torque}" Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorque.png"/>
                        <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="МОМЕНТ"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}"/>

                <Button Tag="{x:Static domain:JointMode.TorqueShoulder}" Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorqueShoulder.png"/>
                        <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="МОМЕНТ и ВЫСТУП"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}"/>

                <Button Tag="{x:Static domain:JointMode.Length}" Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeLength.png"/>
                        <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="ДЛИНА"/>
                    </Grid>
                </Button>

                <Border Style="{StaticResource BorderSeparatorStyle}"/>

                <Button Tag="{x:Static domain:JointMode.TorqueLength}" Style="{StaticResource SelectModeButtonColored}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorqueLength.png"/>
                        <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="МОМЕНТ и ДЛИНА"/>
                    </Grid>
                </Button>
            </WrapPanel>

            <!-- Информация о реферальном рецепте (показывается при дублировании) -->
            <StackPanel Grid.Row="2" Grid.RowSpan="2" Orientation="Vertical" Margin="0,0,0,10"
                        Visibility="{Binding IsBasedOnExisting, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Label Content="Рецепт создаётся на основе:" FontWeight="Bold" Margin="0,0,0,5"/>

                <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Background="#F5F5F5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Название:" FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SourceRecipe.Name}" VerticalAlignment="Center" Margin="0,0,0,5"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Режим:" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SourceRecipe.JointMode, Converter={StaticResource JointModeToStringConverter}}" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Ошибка -->
            <TextBox Grid.Row="4"
                     Foreground="Red"
                     IsReadOnly="True"
                     Margin="0,0,0,10"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Text="{Binding Error}"/>

            <!-- Подсказка -->
            <TextBox Grid.Row="5"
                     IsReadOnly="True"
                     BorderThickness="0"
                     HorizontalAlignment="Center"
                     Text="- Enter - *создать* - Esc - *отменить*"/>

        </Grid>
    </Border>
</Window>
