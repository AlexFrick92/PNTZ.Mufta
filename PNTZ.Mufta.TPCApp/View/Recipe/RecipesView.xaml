<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.RecipesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"     
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             
             d:DataContext="{d:DesignInstance Type=viewmodel:RecipesViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- ========================================
    ВЬЮШКА ПРОЦЕССА СВИНЧИВАНИЯ         
    ======================================== -->
    <Grid>
        <Grid.ColumnDefinitions >
            <!--Текущие данные, результат и рецепт-->
            <ColumnDefinition Width="auto"/>
            <!-- Графики и оценка -->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <!--Шапка с заголовками-->
            <RowDefinition Height="auto"/>
            <!--Основные данные-->
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!-- ========================================
         ШАПКА С ЗАГОЛОВКАМИ       
         ======================================== -->

        <Border Grid.Column="0"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">
            <Label Content="РЕЦЕПТЫ"
                   Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                   FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                   FontWeight="{StaticResource JointView_SectionHeader_FontWeight}"
                   FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                   Margin="10"
                   BorderThickness="0"/>
        </Border>

        <Border Grid.Column="1"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">   
            <Label Content="РЕДАКТИРОВАНИЕ РЕЦЕПТА"
                   Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                   FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                   FontWeight="{StaticResource JointView_SectionHeader_FontWeight}"
                   FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                   Margin="10"
                   BorderThickness="0"/>
        </Border>

        
        <!-- ========================================
         СПИСОК РЕЦЕПТОВ
         ======================================== -->
        <ContentControl Grid.Row="1" Grid.Column="0" Width="300"/>



        <!-- ========================================
         РЕДАКТИРОВАНИЕ РЕЦЕПТА
         ======================================== -->
        <local:EditRecipeView Grid.Row="1" Grid.Column="1"/>


    </Grid>
</UserControl>
