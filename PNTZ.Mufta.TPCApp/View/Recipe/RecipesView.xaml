<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.RecipesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             xmlns:converter="clr-namespace:PNTZ.Mufta.TPCApp.View.Converter"
             
             d:DataContext="{d:DesignInstance Type=viewmodel:RecipesViewModel}"
             
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Базовый стиль для кнопок без фона -->
        <Style x:Key="TransparentButtonBase" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стили для конкретных кнопок -->
        <Style x:Key="ButtonCreate" TargetType="Button" BasedOn="{StaticResource TransparentButtonBase}">
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="ButtonSave" TargetType="Button" BasedOn="{StaticResource TransparentButtonBase}">
            <Setter Property="Foreground" Value="DodgerBlue"/>
        </Style>

        <Style x:Key="ButtonCancel" TargetType="Button" BasedOn="{StaticResource TransparentButtonBase}">
            <Setter Property="Foreground" Value="#F39C12"/>
        </Style>

        <Style x:Key="ButtonDelete" TargetType="Button" BasedOn="{StaticResource TransparentButtonBase}">
            <Setter Property="Foreground" Value="Red"/>
        </Style>

        <Style x:Key="ButtonDuplicate" TargetType="Button" BasedOn="{StaticResource TransparentButtonBase}">
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="ButtonLoad" TargetType="Button" BasedOn="{StaticResource TransparentButtonBase}">
            <Setter Property="Foreground" Value="ForestGreen"/>
        </Style>
    </UserControl.Resources>

    <!-- ========================================
    ВЬЮШКА ПРОЦЕССА СВИНЧИВАНИЯ
    ======================================== -->
    <Grid>
        <Grid.ColumnDefinitions >
            <!-- Список рецептов -->
            <ColumnDefinition Width="auto"/>
            <!-- редактирование рецепта -->
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <!--Шапка с заголовками-->
            <RowDefinition Height="auto"/>
            <!--Основные данные-->
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!-- ========================================
         ШАПКА С ЗАГОЛОВКОМ - РЕЦЕПТЫ    
         ======================================== -->

        <Border Grid.Column="0"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Content="РЕЦЕПТЫ"
                       Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                       FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                       FontWeight="{StaticResource JointView_SectionHeader_FontWeight}"
                       FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                       Margin="10"
                       BorderThickness="0"/>

                <Button Grid.Column="1"
                        Style="{StaticResource ButtonCreate}"
                        Command="{Binding NewRecipeCommand}"
                        Content="📄 Создать"/>
            </Grid>
        </Border>

        <!-- ========================================
         ШАПКА С ЗАГОЛОВКОМ - РЕДАКТИРОВАНИЕ + КНОПКИ
         ======================================== -->

        <Border Grid.Column="1"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Заголовок -->
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <!-- Кнопки управления рецептом -->
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок -->
                <Label Grid.Column="0"
                       Content="РЕДАКТИРОВАНИЕ"
                       Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                       FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                       FontWeight="{StaticResource JointView_SectionHeader_FontWeight}"
                       FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                       Margin="10"
                       BorderThickness="0"/>

                <!-- ========================================
                КНОПКИ УПРАВЛЕНИЯ РЕЦЕПТОМ
                ======================================== -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource ButtonSave}"
                            Command="{Binding EditRecipeViewModel.SaveRecipeCommand}"
                            Content="💾 Сохранить"/>    

                    <Button Style="{StaticResource ButtonCancel}"
                            Command="{Binding EditRecipeViewModel.CancelCommand}"
                            Content="❌ Отменить"/>

                    <Button Style="{StaticResource ButtonDelete}"
                            Command="{Binding EditRecipeViewModel.DeleteRecipeCommand}"
                            Content="🗑️ Удалить"/>

                    <Button Style="{StaticResource ButtonDuplicate}"
                            Command="{Binding DuplicateRecipeCommand}"
                            Content="📋 Дублировать"/>

                    <Border Width="0.5"
                            Margin="10,5,10,5"
                            Background="{StaticResource JointView_GridBorder}"/>

                    <Button Style="{StaticResource ButtonLoad}"
                            Command="{Binding LoadRecipeCommand}"
                            Content="🡇 Загрузить"/>

                </StackPanel>
            </Grid>
        </Border>


        <!-- ========================================
         СПИСОК РЕЦЕПТОВ
         ======================================== -->
        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,0,1,0" BorderBrush="{StaticResource JointView_GridBorder}">
            <local:RecipesListView Grid.Row="1" Grid.Column="0" Width="300" DataContext="{Binding RecipesList}"/>
        </Border>

        <!-- ========================================
         РЕДАКТИРОВАНИЕ РЕЦЕПТА
         ======================================== -->
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="0,0,0,0" BorderBrush="{StaticResource JointView_GridBorder}">
            <local:EditRecipeView Grid.Row="1" Grid.Column="1" DataContext="{Binding EditRecipeViewModel}"/>
        </Border>

        

        <Border Grid.Column="2"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">
        </Border>

    </Grid>
</UserControl>
