<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.RecipesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             xmlns:converter="clr-namespace:PNTZ.Mufta.TPCApp.View.Converter"
             
             d:DataContext="{d:DesignInstance Type=viewmodel:RecipesViewModel}"
             
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converter:NullOrEmptyToBoolConverter x:Key="NullOrEmptyToBoolConverter"/>
    </UserControl.Resources>

    <!-- ========================================
    ВЬЮШКА ПРОЦЕССА СВИНЧИВАНИЯ
    ======================================== -->
    <Grid>
        <Grid.ColumnDefinitions >
            <!-- Список рецептов -->
            <ColumnDefinition Width="auto"/>
            <!-- редактирование рецепта -->
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <!--Шапка с заголовками-->
            <RowDefinition Height="auto"/>
            <!--Основные данные-->
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!-- ========================================
         ШАПКА С ЗАГОЛОВКОМ - РЕЦЕПТЫ    
         ======================================== -->

        <Border Grid.Column="0"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">
            <Label Content="РЕЦЕПТЫ"
                   Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                   FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                   FontWeight="{StaticResource JointView_SectionHeader_FontWeight}"
                   FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                   Margin="10"
                   BorderThickness="0"/>
        </Border>

        <!-- ========================================
         ШАПКА С ЗАГОЛОВКОМ - РЕДАКТИРОВАНИЕ + КНОПКИ
         ======================================== -->

        <Border Grid.Column="1"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="{StaticResource JointView_SectionHeader_Background}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding EditRecipeViewModel.HasValidationErrors}" Value="True">
                            <Setter Property="Background" Value="#FFE5E5"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Заголовок и имя рецепта -->
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <!-- Кнопки управления рецептом -->
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок и название рецепта -->
                <Grid Grid.Column="0" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Content="РЕДАКТИРОВАНИЕ РЕЦЕПТА"
                           Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                           FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                           Padding="0"
                           Margin="0">
                        <Label.Style>
                            <Style TargetType="Label">
                                <!-- Значения по умолчанию (когда рецепт НЕ выбран) -->
                                <Setter Property="FontSize" Value="{StaticResource JointView_SectionHeader_FontSize}"/>
                                <Setter Property="FontWeight" Value="{StaticResource JointView_SectionHeader_FontWeight}"/>
                                <Style.Triggers>
                                    <!-- Когда рецепт выбран, уменьшаем шрифт -->
                                    <DataTrigger Binding="{Binding EditRecipeViewModel.EditingRecipe, Converter={StaticResource NullOrEmptyToBoolConverter}}" Value="False">
                                        <Setter Property="FontSize" Value="8"/>
                                        <Setter Property="FontWeight" Value="Normal"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>

                    <Label Grid.Row="1"
                           Content="{Binding EditRecipeViewModel.EditingRecipe.Name}"
                           Foreground="Black"
                           FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                           FontWeight="Bold"
                           FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                           Padding="0"
                           Margin="0,2,0,0">
                        <Label.Style>
                            <Style TargetType="Label">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EditRecipeViewModel.EditingRecipe.Name, Converter={StaticResource NullOrEmptyToBoolConverter}}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>
                    </Label>
                </Grid>

                <!-- ========================================
                КНОПКИ УПРАВЛЕНИЯ РЕЦЕПТОМ
                ======================================== -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button  Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.SaveRecipeCommand}"
                             Content="💾 Сохранить"/>    

                    <Button Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.CancelCommand}"
                             Content="❌ Отменить"/>

                    <Button Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.DeleteRecipeCommand}"
                             Content="🗑️ Удалить"/>

                    <Border Width="0.5"
                            Margin="10,5,10,5"
                            Background="{StaticResource JointView_GridBorder}"/>

                    <Button Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.LoadRecipeCommand}"
                             Content="🡇 Загрузить"/>

                </StackPanel>
            </Grid>
        </Border>


        <!-- ========================================
         СПИСОК РЕЦЕПТОВ
         ======================================== -->
        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,0,1,0" BorderBrush="{StaticResource JointView_GridBorder}">
            <local:RecipesListView Grid.Row="1" Grid.Column="0" Width="300" DataContext="{Binding RecipesList}"/>
        </Border>

        <!-- ========================================
         РЕДАКТИРОВАНИЕ РЕЦЕПТА
         ======================================== -->
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="0,0,0,0" BorderBrush="{StaticResource JointView_GridBorder}">
            <local:EditRecipeView Grid.Row="1" Grid.Column="1" DataContext="{Binding EditRecipeViewModel}"/>
        </Border>

    </Grid>
</UserControl>
