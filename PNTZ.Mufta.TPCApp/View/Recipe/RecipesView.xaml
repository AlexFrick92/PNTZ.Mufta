<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.RecipesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"     
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             
             d:DataContext="{d:DesignInstance Type=viewmodel:RecipesViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- ========================================
    ВЬЮШКА ПРОЦЕССА СВИНЧИВАНИЯ         
    ======================================== -->
    <Grid>
        <Grid.ColumnDefinitions >
            <!--Текущие данные, результат и рецепт-->
            <ColumnDefinition Width="auto"/>
            <!-- Графики и оценка -->
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <!--Шапка с заголовками-->
            <RowDefinition Height="auto"/>
            <!--Основные данные-->
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!-- ========================================
         ШАПКА С ЗАГОЛОВКАМИ       
         ======================================== -->

        <Border Grid.Column="0"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">
            <Label Content="РЕЦЕПТЫ"
                   Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                   FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                   FontWeight="{StaticResource JointView_SectionHeader_FontWeight}"
                   FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                   Margin="10"
                   BorderThickness="0"/>
        </Border>

        <Border Grid.Column="1"
                BorderThickness="0,0,1,1"
                BorderBrush="{StaticResource JointView_GridBorder}"
                Background="{StaticResource JointView_SectionHeader_Background}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок и название рецепта -->
                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10,5">
                    <Label Content="Редактирование рецепта"
                           Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                           FontSize="12"
                           FontWeight="Normal"
                           FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                           Padding="0"
                           Margin="0"/>

                    <Label Content="{Binding EditRecipeViewModel.EditingRecipe.Name}"
                           Foreground="{StaticResource JointView_SectionHeader_Foreground}"
                           FontSize="{StaticResource JointView_SectionHeader_FontSize}"
                           FontWeight="Bold"
                           FontFamily="{StaticResource JointView_SectionHeader_FontFamily}"
                           Padding="0"
                           Margin="0,2,0,0"/>
                </StackPanel>
                <!-- Кнопки управления рецептом -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button  Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.SaveRecipeCommand}"
                             Content="💾 Сохранить"/>    

                    <Button Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.CancelCommand}"
                             Content="❌ Отменить"/>

                    <Button Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.DeleteRecipeCommand}"
                             Content="🗑️ Удалить"/>

                    <Border Width="0.5"
                            Margin="10,5,10,5"
                            Background="{StaticResource JointView_GridBorder}"/>

                    <Button Margin="5"
                             Padding="10,5"
                             Command="{Binding EditRecipeViewModel.LoadRecipeCommand}"
                             Content="🡇 Загрузить"/>

                </StackPanel>
            </Grid>
        </Border>


        <!-- ========================================
         СПИСОК РЕЦЕПТОВ
         ======================================== -->
        <Border Grid.Column="0" Grid.Row="1" BorderThickness="0,0,1,0" BorderBrush="{StaticResource JointView_GridBorder}">
            <local:RecipesListView Grid.Row="1" Grid.Column="0" Width="300" DataContext="{Binding RecipesList}"/>
        </Border>

        <!-- ========================================
         РЕДАКТИРОВАНИЕ РЕЦЕПТА
         ======================================== -->
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="0,0,0,0" BorderBrush="{StaticResource JointView_GridBorder}">
            <local:EditRecipeView Grid.Row="1" Grid.Column="1" DataContext="{Binding EditRecipeViewModel}"/>
        </Border>

    </Grid>
</UserControl>
