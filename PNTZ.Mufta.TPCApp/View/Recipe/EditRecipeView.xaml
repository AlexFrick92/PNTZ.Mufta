<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.EditRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"
             xmlns:ctrl="clr-namespace:PNTZ.Mufta.TPCApp.View.Control"
             xmlns:vt="clr-namespace:PNTZ.Mufta.TPCApp.View.Control.ValueTypes"
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             xmlns:view="clr-namespace:PNTZ.Mufta.TPCApp.View"
             xmlns:conv="clr-namespace:PNTZ.Mufta.TPCApp.View.Converter"
             xmlns:domain="clr-namespace:PNTZ.Mufta.TPCApp.Domain"
             xmlns:joint="clr-namespace:PNTZ.Mufta.TPCApp.Domain"
             xmlns:helpers="clr-namespace:PNTZ.Mufta.TPCApp.View.Helpers"

            d:DataContext="{d:DesignInstance Type=viewmodel:EditRecipeViewModel}"

             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- ========================================
     РЕСУРСЫ
     ======================================== -->

    <UserControl.Resources>
        <!-- ========================================
        СТИЛИ
        ======================================== -->

        <!--Заголовок-->
        <Style x:Key="ParamHeaderLabel" TargetType="Label">
            <Setter Property="FontSize" Value="{DynamicResource JointProcess_ParamHeader_FontSize}"/>
            <Setter Property="FontWeight" Value="{DynamicResource JointProcess_ParamHeader_FontWeight}"/>
            <Setter Property="FontFamily" Value="{DynamicResource JointProcess_ParamHeader_FontFamily}"/>
            <Setter Property="Foreground" Value="{DynamicResource JointProcess_ParamHeader_Foreground}"/>
        </Style>
        <!--Линия под заголовком-->
        <Style x:Key="HeaderUnderStroke" TargetType="Border">
            <Setter Property="BorderThickness" Value="0,1,0,0"/>
            <Setter Property="BorderBrush" Value="{DynamicResource JointProcess_ParamHeader_Foreground}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <!--Стиль заголовка-->
        <Style x:Key="InputFieldLabel" TargetType="Label">
            <Setter Property="Height" Value="25"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- ========================================
        КОНВЕРТЕРЫ
        ======================================== -->

        <view:EnumToCollectionConverter x:Key="EnumToCollectionConverter"/>
        <view:EnumEqualityConverter x:Key="EnumEqualityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:NullToVisibilityConverter x:Key="NullToVisConverter"/>
        <conv:JointModeToVisibilityConverter x:Key="JointModeToVisConverter"/>

        <!-- ========================================
        СТИЛИ ДЛЯ КНОПОК РЕЖИМА
        ======================================== -->

        <Style x:Key="BorderSeparatorStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#cecece"/>
            <Setter Property="BorderThickness" Value="1,0,0,0"/>
            <Setter Property="Margin" Value="2,2,2,2"/>
        </Style>

        <Style TargetType="Button" x:Key="SelectModeButtonColored">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Command" Value="{Binding SetModeCommand}"/>
            <Setter Property="Height" Value="75"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="CommandParameter" Value="{Binding Tag, RelativeSource={RelativeSource Self}}"/>

            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource EnumEqualityConverter}">
                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}" />
                            <Binding Path="EditingRecipe.JointMode" />
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <DataTrigger.Setters>
                        <Setter Property="Background" Value="LightGray" />
                    </DataTrigger.Setters>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label" x:Key="SelectModeButtonLabel">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="DimGray"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </UserControl.Resources>


    <!-- ========================================
        КОНТЕНТ
        ======================================== -->

    <Grid Grid.IsSharedSizeScope="True"
          helpers:ValidationHelper.IsEnabled="True"
          helpers:ValidationHelper.HasValidationErrors="{Binding HasValidationErrors, Mode=TwoWay}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="10" Width="auto"
                        Visibility="{Binding EditingRecipe, Converter={StaticResource NullToVisConverter}}">

                <!-- ========================================
                СТАТУС РЕДАКТИРВОАНИЯ
                ======================================== -->

                <!-- Текущий рецепт загружен -->
                <Border Background="#D5F4E6"                           
                         Visibility="{Binding IsLoadedRecipeCurrent, Converter={StaticResource BoolToVis }}"                         
                         BorderBrush="#27AE60"
                         BorderThickness="1"
                         CornerRadius="0"
                         Padding="8"
                         Margin="0,5,0,10">
                    <TextBlock Text="Этот рецепт загружен в ПЛК"
                        FontSize="14"
                        FontWeight="Normal"
                        Foreground="#27AE60"/>
                </Border>

                <Border Background="#FFDEE8"
                        Visibility="{Binding HasValidationErrors, Converter={StaticResource BoolToVis}}"
                         BorderBrush="Red"
                         BorderThickness="1"
                         CornerRadius="0"
                         Padding="8"
                         Margin="0,5,0,10">
                    <TextBlock Text="Ошибки в данных рецепт. Рецепт не может быть загружен или сохранён"
                        FontSize="14"
                        FontWeight="Normal"
                        Foreground="Red"/>
                </Border>

                <!-- ========================================
                ОБЩИЕ ПАРАМЕТРЫ + ДАННЫЕ МУФТЫ + ПРЕДНАВЁРТКА (2 колонки)
                ======================================== -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- ЛЕВАЯ КОЛОНКА: Общие параметры -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                        <Label Style="{StaticResource ParamHeaderLabel}" Content="⚙️ Общие параметры"/>
                        <Border Style="{StaticResource HeaderUnderStroke}"/>

                        <ctrl:ParameterDisplayControl Label="Обороты на откр. гол."
                                Value="{Binding EditingRecipe.HEAD_OPEN_PULSES,
                                                ValidatesOnExceptions=True,
                                                NotifyOnValidationError=True}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F2" MinValue="0.01" MaxValue="10"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Обороты развинчивание"
                                Value="{Binding EditingRecipe.TURNS_BREAK}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F2" MinValue="0.01" MaxValue="10"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Шаг резьбы, m/n"
                                Value="{Binding EditingRecipe.Thread_step}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F2" MinValue="0.1" MaxValue="10"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Программа SPS"
                                Value="{Binding EditingRecipe.PLC_PROG_NR}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:IntegerValueType MinValue="0" MaxValue="999"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <Grid>
                            <Grid.Resources>
                                <Style x:Key="ParamLabelStyle" TargetType="Label">
                                    <Setter Property="Margin" Value="10,0,0,0"/>
                                    <Setter Property="FontSize" Value="{StaticResource ParameterDisplay_Label_FontSize}"/>
                                    <Setter Property="FontWeight" Value="{StaticResource ParameterDisplay_Label_FontWeight}"/>
                                    <Setter Property="FontFamily" Value="{StaticResource ParameterDisplay_Label_FontFamily}"/>
                                    <Setter Property="Foreground" Value="{StaticResource ParameterDisplay_Label_Foreground}"/>
                                </Style>
                            </Grid.Resources>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="{StaticResource ParameterDisplay_ValueColumnWidth}"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0"
                                        Style="{StaticResource ParamLabelStyle}" Content="Тип резьбы"/>

                            <ComboBox Grid.Column="1"
                                    ItemsSource="{Binding Path=EditingRecipe.ThreadType, Converter={StaticResource EnumToCollectionConverter}, Mode=OneWay}" 
                                    SelectedValuePath="Value"
                                    DisplayMemberPath="Description"
                                    SelectedValue="{Binding Path=EditingRecipe.ThreadType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"           
                                    HorizontalAlignment="Stretch"                                                                             
                                    HorizontalContentAlignment="Center"/>
                        </Grid>

                    </StackPanel>

                    <!-- ПРАВАЯ КОЛОНКА: Данные муфты + Преднавёртка -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                        <!-- ДАННЫЕ МУФТЫ -->
                        <Label Style="{StaticResource ParamHeaderLabel}" Content="🔩 Данные муфты"/>
                        <Border Style="{StaticResource HeaderUnderStroke}"/>

                        <ctrl:ParameterDisplayControl Label="Мин. длина"
                                Value="{Binding EditingRecipe.Box_Len_Min}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F1" MinValue="50" MaxValue="500"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Макс. длина"
                                Value="{Binding EditingRecipe.Box_Len_Max}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F1" MinValue="50" MaxValue="500"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Время наблюдения"
                                Value="{Binding EditingRecipe.Box_Moni_Time}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:IntegerValueType MinValue="5" MaxValue="100"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <!-- ПРЕДНАВЁРТКА -->
                        <Label Style="{StaticResource ParamHeaderLabel}" Content="🔧 Преднавёртка" Margin="0,20,0,0"/>
                        <Border Style="{StaticResource HeaderUnderStroke}"/>

                        <ctrl:ParameterDisplayControl Label="Мин. длина"
                                Value="{Binding EditingRecipe.Pre_Len_Min}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F1" MinValue="5" MaxValue="500"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Макс. длина"
                                Value="{Binding EditingRecipe.Pre_Len_Max}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F1" MinValue="5" MaxValue="500"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Время наблюдения"
                                Value="{Binding EditingRecipe.Pre_Moni_Time}"
                                IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:IntegerValueType MinValue="5" MaxValue="100"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>
                    </StackPanel>
                </Grid>

                <!-- ========================================
                ВЫБОР РЕЖИМА СВИНЧИВАНИЯ
                ======================================== -->
                <Label Style="{StaticResource ParamHeaderLabel}" Content="🛠️ Режим свинчивания" Margin="0,20,0,0"/>
                <Border Style="{StaticResource HeaderUnderStroke}"/>

                <WrapPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <Button Tag="{x:Static domain:JointMode.Torque}" Style="{StaticResource SelectModeButtonColored}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorque.png"/>
                            <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="МОМЕНТ"/>
                        </Grid>
                    </Button>

                    <Border Style="{StaticResource BorderSeparatorStyle}"/>

                    <Button Tag="{x:Static domain:JointMode.TorqueShoulder}" Style="{StaticResource SelectModeButtonColored}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorqueShoulder.png"/>
                            <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="МОМЕНТ и ВЫСТУП"/>
                        </Grid>
                    </Button>

                    <Border Style="{StaticResource BorderSeparatorStyle}"/>

                    <Button Tag="{x:Static domain:JointMode.Length}" Style="{StaticResource SelectModeButtonColored}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeLength.png"/>
                            <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="ДЛИНА"/>
                        </Grid>
                    </Button>

                    <Border Style="{StaticResource BorderSeparatorStyle}"/>

                    <Button Tag="{x:Static domain:JointMode.TorqueLength}" Style="{StaticResource SelectModeButtonColored}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/View/Resource/Images/ModeTorqueLength.png"/>
                            <Label Grid.Row="1" Style="{StaticResource SelectModeButtonLabel}" Content="МОМЕНТ и ДЛИНА"/>
                        </Grid>
                    </Button>
                </WrapPanel>


                <!-- ========================================
                ПАРАМЕТРЫ КОНТРОЛЯ СВИНЧИВАНИЯ
                ======================================== -->

                <!-- Динамический заголовок в зависимости от режима -->
                <Label>
                    <Label.Style>
                        <Style TargetType="Label" BasedOn="{StaticResource ParamHeaderLabel}">
                            <!-- Значение по умолчанию -->
                            <Setter Property="Content" Value="💪 Параметры контроля свинчивания"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditingRecipe.JointMode}" Value="{x:Static joint:JointMode.Torque}">
                                    <Setter Property="Content" Value="💪 Параметры контроля свинчивания: КОНТРОЛЬ МОМЕНТА"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding EditingRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueShoulder}">
                                    <Setter Property="Content" Value="💪 Параметры контроля свинчивания: КОНТРОЛЬ МОМЕНТА И ВЫСТУПА"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding EditingRecipe.JointMode}" Value="{x:Static joint:JointMode.Length}">
                                    <Setter Property="Content" Value="📐 Параметры контроля свинчивания: КОНТРОЛЬ ДЛИНЫ"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding EditingRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueLength}">
                                    <Setter Property="Content" Value="📐 Параметры контроля свинчивания: КОНТРОЛЬ МОМЕНТА И ДЛИНЫ"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                <Border Style="{StaticResource HeaderUnderStroke}"/>


                <!-- РЕЖИМЫ: МОМЕНТ И МОМЕНТ+ВЫСТУП (2 колонки) -->
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- ЛЕВАЯ КОЛОНКА: Параметры момента -->
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">

                        <ctrl:ParameterDisplayControl Label="Крутящий момент сброса, Нм"
                                    Value="{Binding EditingRecipe.MU_Tq_Dump}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="1" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Оптимальный крутящий момент, Нм"
                                    Value="{Binding EditingRecipe.MU_Tq_Opt}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="1" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Мин. крутящий момент, Нм"
                                    Value="{Binding EditingRecipe.MU_Tq_Min}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.Visibility>
                                <Binding Path="EditingRecipe.JointMode" Converter="{StaticResource JointModeToVisConverter}">
                                    <Binding.ConverterParameter>
                                        <x:Array Type="domain:JointMode">
                                            <domain:JointMode>Torque</domain:JointMode>
                                            <domain:JointMode>TorqueShoulder</domain:JointMode>
                                            <domain:JointMode>TorqueLength</domain:JointMode>
                                        </x:Array>
                                    </Binding.ConverterParameter>
                                </Binding>
                            </ctrl:ParameterDisplayControl.Visibility>
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="1" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Макс. крутящий момент, Нм"
                                    Value="{Binding EditingRecipe.MU_Tq_Max}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.Visibility>
                                <Binding Path="EditingRecipe.JointMode" Converter="{StaticResource JointModeToVisConverter}">
                                    <Binding.ConverterParameter>
                                        <x:Array Type="domain:JointMode">
                                            <domain:JointMode>Torque</domain:JointMode>
                                            <domain:JointMode>TorqueShoulder</domain:JointMode>
                                            <domain:JointMode>TorqueLength</domain:JointMode>
                                        </x:Array>
                                    </Binding.ConverterParameter>
                                </Binding>
                            </ctrl:ParameterDisplayControl.Visibility>
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="1" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <Label/>

                        <ctrl:ParameterDisplayControl Label="Опорный крутящий момент, Нм"
                                    Value="{Binding EditingRecipe.MU_Tq_Ref}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="0" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Крутящий момент автосохранения, Нм"
                                    Value="{Binding EditingRecipe.MU_Tq_Save}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="0" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Время наблюдения"
                                    Value="{Binding EditingRecipe.MU_Moni_Time}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:IntegerValueType MinValue="5" MaxValue="100"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>
                    </StackPanel>

                    <!-- ПРАВАЯ КОЛОНКА: Уменьшение скорости -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,0,0,0">
                        <ctrl:ParameterDisplayControl Label="Уменьш. скор. 1 крут. момента, Нм"
                                    Value="{Binding EditingRecipe.MU_TqSpeedRed_1}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.Visibility>
                                <Binding Path="EditingRecipe.JointMode" Converter="{StaticResource JointModeToVisConverter}">
                                    <Binding.ConverterParameter>
                                        <x:Array Type="domain:JointMode">
                                            <domain:JointMode>Torque</domain:JointMode>
                                            <domain:JointMode>TorqueShoulder</domain:JointMode>
                                        </x:Array>
                                    </Binding.ConverterParameter>
                                </Binding>
                            </ctrl:ParameterDisplayControl.Visibility>
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="0" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Уменьш. скор. 2 крут. момента, Нм"
                                    Value="{Binding EditingRecipe.MU_TqSpeedRed_2}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.Visibility>
                                <Binding Path="EditingRecipe.JointMode" Converter="{StaticResource JointModeToVisConverter}">
                                    <Binding.ConverterParameter>
                                        <x:Array Type="domain:JointMode">
                                            <domain:JointMode>Torque</domain:JointMode>
                                            <domain:JointMode>TorqueShoulder</domain:JointMode>
                                        </x:Array>
                                    </Binding.ConverterParameter>
                                </Binding>
                            </ctrl:ParameterDisplayControl.Visibility>
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="0" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Минимальный момент на плече, Нм"
                                    Value="{Binding EditingRecipe.MU_TqShoulder_Min}"
                                    Visibility="{Binding EditingRecipe.JointMode, Converter={StaticResource JointModeToVisConverter}, ConverterParameter={x:Static domain:JointMode.TorqueShoulder}}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="1" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Максимальный момент на плече, Нм"
                                    Value="{Binding EditingRecipe.MU_TqShoulder_Max}"
                                    Visibility="{Binding EditingRecipe.JointMode, Converter={StaticResource JointModeToVisConverter}, ConverterParameter={x:Static domain:JointMode.TorqueShoulder}}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="N0" MinValue="1" MaxValue="30000"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Сброс глубины свинчивания, мм"
                                    Value="{Binding EditingRecipe.MU_Len_Dump}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.Visibility>
                                <Binding Path="EditingRecipe.JointMode" Converter="{StaticResource JointModeToVisConverter}">
                                    <Binding.ConverterParameter>
                                        <x:Array Type="domain:JointMode">
                                            <domain:JointMode>Length</domain:JointMode>
                                            <domain:JointMode>TorqueLength</domain:JointMode>
                                        </x:Array>
                                    </Binding.ConverterParameter>
                                </Binding>
                            </ctrl:ParameterDisplayControl.Visibility>
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F1" MinValue="1" MaxValue="200"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Глубина/Уменьшение скорости 1, мм"
                                    Value="{Binding EditingRecipe.MU_Len_Speed_1}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.Visibility>
                                <Binding Path="EditingRecipe.JointMode" Converter="{StaticResource JointModeToVisConverter}">
                                    <Binding.ConverterParameter>
                                        <x:Array Type="domain:JointMode">
                                            <domain:JointMode>Length</domain:JointMode>
                                            <domain:JointMode>TorqueLength</domain:JointMode>
                                        </x:Array>
                                    </Binding.ConverterParameter>
                                </Binding>
                            </ctrl:ParameterDisplayControl.Visibility>
                            <ctrl:ParameterDisplayControl.ValueType>
                                <vt:FloatValueType StringFormat="F1" MinValue="1" MaxValue="200"/>
                            </ctrl:ParameterDisplayControl.ValueType>
                        </ctrl:ParameterDisplayControl>

                        <ctrl:ParameterDisplayControl Label="Глубина/Уменьшение скорости 2, мм"
                                    Value="{Binding EditingRecipe.MU_Len_Speed_2}"
                                    IsReadOnly="False">
                            <ctrl:ParameterDisplayControl.Visibility>
