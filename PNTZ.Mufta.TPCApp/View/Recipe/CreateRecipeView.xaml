                    <Label Grid.Row="5" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Мин. длина, мм"/>
                    <TextBox Grid.Row="5" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Len_Min, ValidatesOnExceptions=True, StringFormat=F1}" />

