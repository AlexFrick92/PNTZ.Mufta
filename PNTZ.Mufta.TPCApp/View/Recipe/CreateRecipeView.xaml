                    <Label Grid.Row="7" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Длина сброса, мм"/>
                    <TextBox Grid.Row="7" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Len_Dump, ValidatesOnExceptions=True, StringFormat=F1}" />




                    <Label Grid.Row="1" Grid.Column="2"
                        Style="{StaticResource InputFieldLabel}" Content="Уменьш. скор. 1 при длине, мм"/>
                    <TextBox Grid.Row="1" Grid.Column="3"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Len_Speed_1, ValidatesOnExceptions=True, StringFormat=F1}"/>

                    <Label Grid.Row="2" Grid.Column="2"
                        Style="{StaticResource InputFieldLabel}" Content="Уменьш. скор. 2 при длине, мм"/>
                    <TextBox Grid.Row="2" Grid.Column="3"
