                    <TextBox Grid.Row="3" Grid.Column="3"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource ModeInputVisibility}" Text="{Binding EditRecipe.MU_Tq_Min, ValidatesOnExceptions=True}"/>

                    <Label Grid.Row="4" Grid.Column="2"
                        Style="{StaticResource ModeLabelVisibility}" Content="Максимальный момент, Нм"/>
                    <TextBox Grid.Row="4" Grid.Column="3"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource ModeInputVisibility}" Text="{Binding EditRecipe.MU_Tq_Max, ValidatesOnExceptions=True}"/>

                    <!-- /////////////////////////////////////РЕЖИМ: ПО-ДЛИНЕ (С С КОНТРОЛЕМ МОМЕНТА И БЕЗ) //////////////////////////////////-->
                </Grid>


                <!-- ******************** РЕЖИМ: ПО-J (С КОНТРОЛЕМ МОМЕНТА И БЕЗ) ***************************** -->
                <Grid>
                    <Grid.Resources>
                        <!--Видимость лейблов для режима с контролем момента-->
                        <Style TargetType="Label" x:Key="ModeLabelVisibility" BasedOn="{StaticResource InputFieldLabel}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueJVal}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                        <!--Видимость полей для режима с плечом-->
                        <Style TargetType="TextBox" x:Key="ModeInputVisibility" BasedOn="{StaticResource InputField}">
                            <Setter Property="Visibility" Value="Hidden"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueJVal}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.Jval}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding EditRecipe.JointMode}" Value="{x:Static joint:JointMode.TorqueJVal}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--ЗАГОЛОВОК-->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Margin="5,5,0,0">
                        <Label Style="{StaticResource ParamHeaderLabel}" Content="Параметры контроля свинчивания: КОНТРОЛЬ ЗНАЧЕНИЯ J"/>
                        <Border Style="{StaticResource HeaderUnderStroke}"/>
                    </StackPanel>

                    <!--ПАРАМЕТРЫ-->
                    <Label Grid.Row="1" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Базовый крутящий момент, Нм"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Tq_Ref , ValidatesOnExceptions=True}"/>

                    <Label Grid.Row="2" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Крутящий момент автосохранения, Нм"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Tq_Save, ValidatesOnExceptions=True}"/>

                    <Label Grid.Row="3" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Время наблюдения" />
                    <TextBox Grid.Row="3" Grid.Column="1"
                        PreviewTextInput="IntInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Moni_Time, ValidatesOnExceptions=True}" />

                    <Label Grid.Row="4" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Крутящий момент сброса, Нм"/>
                    <TextBox Grid.Row="4" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Tq_Dump, ValidatesOnExceptions=True}" />



                    <Label Grid.Row="5" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Мин. значение J, мм"/>
                    <TextBox Grid.Row="5" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Jval_Min, ValidatesOnExceptions=True, StringFormat=F1}" />

                    <Label Grid.Row="6" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Макс. значение J, мм"/>
                    <TextBox Grid.Row="6" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Jval_Max, ValidatesOnExceptions=True, StringFormat=F1}" />

                    <Label Grid.Row="7" Grid.Column="0"
                        Style="{StaticResource InputFieldLabel}" Content="Значение J сброса, мм"/>
                    <TextBox Grid.Row="7" Grid.Column="1"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Jval_Dump, ValidatesOnExceptions=True, StringFormat=F1}" />




                    <Label Grid.Row="1" Grid.Column="2"
                        Style="{StaticResource InputFieldLabel}" Content="Уменьш. скор. 1 при значении J, мм"/>
                    <TextBox Grid.Row="1" Grid.Column="3"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Jval_Speed_1, ValidatesOnExceptions=True, StringFormat=F1}"/>

                    <Label Grid.Row="2" Grid.Column="2"
                        Style="{StaticResource InputFieldLabel}" Content="Уменьш. скор. 2 при значении J, мм"/>
                    <TextBox Grid.Row="2" Grid.Column="3"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource InputField}" Text="{Binding EditRecipe.MU_Jval_Speed_2, ValidatesOnExceptions=True, StringFormat=F1}"/>

                    <Label Grid.Row="3" Grid.Column="2"
                        Style="{StaticResource ModeLabelVisibility}" Content="Минимальный момент, Нм"/>
                    <TextBox Grid.Row="3" Grid.Column="3"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource ModeInputVisibility}" Text="{Binding EditRecipe.MU_Tq_Min, ValidatesOnExceptions=True}"/>

                    <Label Grid.Row="4" Grid.Column="2"
                        Style="{StaticResource ModeLabelVisibility}" Content="Максимальный момент, Нм"/>
                    <TextBox Grid.Row="4" Grid.Column="3"
                        PreviewTextInput="FloatInputPreview" Style="{StaticResource ModeInputVisibility}" Text="{Binding EditRecipe.MU_Tq_Max, ValidatesOnExceptions=True}"/>

                    <!-- /////////////////////////////////////РЕЖИМ: ПО-J (С С КОНТРОЛЕМ МОМЕНТА И БЕЗ) //////////////////////////////////-->
                </Grid>

                <!-- ///////////////////// НАСТРОЙКИ ДЛЯ ВЫБРАННОГО РЕЖИМА //////////////////////////////////-->
            </Grid>

            <Grid Grid.Row="4" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column ="0" Content="{Binding EditRecipe.TimeStamp}"></Label>
                
                <Button
                    Grid.Column="1"
                    Margin="4" HorizontalAlignment="Right" Width="150" Height="50"                     
                    Command="{Binding SaveRecipe}"
                    Content="СОХРАНИТЬ"                
                    />

                <Button 
                    Grid.Column="2"
                    Margin="4" HorizontalAlignment="Right" Width="150" Height="50"                     
                    Command="{Binding LoadRecipeCommand}"
                    Content="ЗАГРУЗИТЬ"                
                    />
            </Grid>

            <!--///////////////////////////////////////  РЕДАКТИРОВАНИЕ РЕЦЕПТА //////////////////////////////////-->

        </Grid>

    </Grid>
</UserControl>
