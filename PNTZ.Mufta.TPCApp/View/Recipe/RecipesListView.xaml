<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.RecipesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"

             d:DataContext="{d:DesignInstance Type=viewmodel:RecipesListViewModel}"

             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <viewmodel:RecipeLoadedConverter x:Key="RecipeLoadedConverter"/>
        <viewmodel:JointModeToStringConverter x:Key="JointModeToStringConverter"/>
    </UserControl.Resources>

    <Grid>
        <ListBox Grid.Row="1" ItemsSource="{Binding JointRecipes}" SelectedItem="{Binding SelectedRecipe}"
         BorderThickness="0"
         HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="ItemBorder"
                            Margin="2,2,2,4"
                            Padding="0,0,0,4"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource JointView_GridBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label
                                Content="{Binding OriginalRecipe.Name}"
                                FontSize="14"
                                Background="Transparent"/>

                            <!-- Метка "Загружен" -->
                            <Border x:Name="LoadedBadge"
                                    Grid.Column="1"
                                    Background="#27AE60"
                                    CornerRadius="3"
                                    Padding="5,2"
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                                <TextBlock Text="Загружен"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>

                            <!-- Метка "Есть изменения" -->
                            <Border x:Name="HasChangesBadge"
                                    Grid.Column="2"
                                    Background="#F39C12"
                                    CornerRadius="3"
                                    Padding="5,2"
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding HasChanges, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Есть изменения"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>

                            <Label
                                Grid.Column="3"
                                Background="Transparent">
                                <TextBlock Text="{Binding OriginalRecipe.TimeStamp, StringFormat='{}{0:dd.MM.yyyy}'}" />
                            </Label>

                            <TextBlock
                                Grid.Column="0" Grid.ColumnSpan="4"
                                Grid.Row="1"
                                Background="Transparent"
                                Text="{Binding OriginalRecipe.JointMode, Converter={StaticResource JointModeToStringConverter}}"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <DataTemplate.Triggers>
                        <DataTrigger Value="True">
                            <DataTrigger.Binding>
                                <MultiBinding Converter="{StaticResource RecipeLoadedConverter}">
                                    <Binding />
                                    <Binding Path="DataContext.LoadedRecipe" RelativeSource="{RelativeSource AncestorType=ListBox}"/>
                                </MultiBinding>
                            </DataTrigger.Binding>
                            <Setter TargetName="ItemBorder" Property="Background" Value="#D5F4E6"/>
                            <Setter TargetName="LoadedBadge" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
