<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Recipe.RecipesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe"
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel.Recipe"

             d:DataContext="{d:DesignInstance Type=viewmodel:RecipesListViewModel}"

             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <viewmodel:RecipeLoadedConverter x:Key="RecipeLoadedConverter"/>
        <viewmodel:JointModeToStringConverter x:Key="JointModeToStringConverter"/>
    </UserControl.Resources>

    <Grid>
        <ListBox Grid.Row="1" ItemsSource="{Binding JointRecipes}" SelectedItem="{Binding SelectedRecipe}"
         BorderThickness="0"
         HorizontalContentAlignment="Stretch"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="ItemBorder"
                            Margin="2,2,2,4"
                            Padding="0,0,0,4"
                            BorderThickness="0,0,0,1"
                            BorderBrush="{StaticResource JointView_GridBorder}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Строка 0: Название и Дата -->
                            <TextBlock
                                Grid.Row="0" Grid.Column="0"
                                Text="{Binding OriginalRecipe.Name}"
                                FontSize="14"
                                TextTrimming="CharacterEllipsis"
                                ToolTip="{Binding OriginalRecipe.Name}"
                                VerticalAlignment="Center"
                                Background="Transparent"/>

                            <Label
                                Grid.Row="0" Grid.Column="1"
                                Background="Transparent">
                                <TextBlock Text="{Binding OriginalRecipe.TimeStamp, StringFormat='{}{0:dd.MM.yyyy}'}" />
                            </Label>

                            <!-- Строка 1: Метки -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                        Orientation="Horizontal"
                                        Margin="5,2,0,2">
                                <!-- Метка "Загружен" -->
                                <Border x:Name="LoadedBadge"
                                        Background="#27AE60"
                                        CornerRadius="3"
                                        Padding="5,2"
                                        Margin="0,0,5,0"
                                        Visibility="Collapsed">
                                    <TextBlock Text="Загружен"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>

                                <!-- Метка "Создание" -->
                                <Border Background="#F39C12"
                                        CornerRadius="3"
                                        Padding="5,2"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding IsNew, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="Создание"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>

                                <!-- Метка "Есть изменения" -->
                                <Border x:Name="HasChangesBadge"
                                        Background="#F39C12"
                                        CornerRadius="3"
                                        Padding="5,2"
                                        Margin="0,0,5,0"
                                        Visibility="{Binding HasChanges, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="Есть изменения"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Border>
                            </StackPanel>

                            <!-- Строка 2: Режим свинчивания -->
                            <TextBlock
                                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                Background="Transparent"
                                Text="{Binding OriginalRecipe.JointMode, Converter={StaticResource JointModeToStringConverter}}"
                                VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <DataTemplate.Triggers>
                        <DataTrigger Value="True">
                            <DataTrigger.Binding>
                                <MultiBinding Converter="{StaticResource RecipeLoadedConverter}">
                                    <Binding />
                                    <Binding Path="DataContext.LoadedRecipe" RelativeSource="{RelativeSource AncestorType=ListBox}"/>
                                </MultiBinding>
                            </DataTrigger.Binding>
                            <Setter TargetName="ItemBorder" Property="Background" Value="#D5F4E6"/>
                            <Setter TargetName="LoadedBadge" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
