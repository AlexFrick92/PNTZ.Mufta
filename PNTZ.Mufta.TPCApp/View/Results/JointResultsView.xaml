<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Results.JointResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Results"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" 
             
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ResultsViewModel}"
             >
    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        
        <!--СПИСОК РЕЗУЛЬТАТОВ СЛЕВА-->
        <Grid Grid.Row="0" Grid.Column="0">
            <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}"
                    Background="{StaticResource LightColor}">
                <Label                        
                        Content="История свинчиваний    "
                        FontSize="18"         
                        Margin="4"
                        BorderThickness="0"                                        
                        />
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <ListBox Grid.Row="0" ItemsSource="{Binding Results}" SelectedItem="{Binding SelectedResult}"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch"
                     SelectionMode="Extended"
                  >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="2" BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Label                                                                                                                                             
                                    Grid.Column="0"
                                    Content="{Binding RecipeName, Mode=OneWay}"
                                    Background="Transparent"                                                                                                                                                      
                                />
                                <Label
                                    Grid.Column="1"
                                    Background="Transparent"
                                    Content="{Binding FinishTimeStamp, Mode=OneWay}"
                                    />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <StackPanel Grid.Row="1">
                <Button
                    Content="Обновить"
                    Command="{Binding GetResultCommand}"
                    >
                    
                </Button>
            </StackPanel>
            
        </Grid>
        
        
        <!--РАЗДЕЛИТЕЛЬ-->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                Margin="0,0,0,-5"
            BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridColor}">

        </Border>

        <!--****************************************** РЕЗУЛЬТАТЫ **************************************************************-->
        <Grid Grid.Row="0" Grid.Column="2">
            <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}" Background="{StaticResource LightColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label                 
                        Grid.Column="0"
                        Content="Детали свинчивания"
                        FontSize="18"
                        Margin="4"
                        BorderThickness="0"                        
                        />
                    <Label
                        Grid.Column="1"
                        Content="{Binding SelectedResult.RecipeName}"
                        FontSize="18"
                        Margin="4"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>
                </Grid>
            </Border>
        </Grid>

        <!--Фоновый текст-->
        <Label
                Grid.Row="1" Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="Выберите результат из списка слева"
                FontStyle="Italic"
                FontSize="18"
                Foreground="{StaticResource GridColor}"
                BorderThickness="0"
                          
                >
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ResultSelected}" Value="True">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
                
        
        <!-- РЕЗУЛЬТАТ -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ResultSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!--ПАРАМЕТРЫ-->
            <Grid Grid.Row="0">
                <Grid.Resources>
                    <Style x:Key="ParaFieldStyle" TargetType="TextBox">
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="IsReadOnly" Value="True"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Margin" Value="10,0,0,0"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!---->
                <Label 
                    Grid.Row="0"
                    Grid.Column="0"                    
                    Content="Режим свинчивания"                    
                    />
                
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"                      
                    Style="{StaticResource ParaFieldStyle}"               
                    Text="{Binding SelectedResult.SelectedMode, Mode=OneWay}"
                    />

                <!---->
                <Label 
                    Grid.Row="1"
                    Grid.Column="0"                    
                    Content="Итоговый момент"                    
                    />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinalTorque, Mode=OneWay}"                    
                    />
                    
                
                <!---->
                <Label 
                    Grid.Row="2"
                    Grid.Column="0"                    
                    Content="Итоговая длина"                    
                    />

                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinalLength, Mode=OneWay}"                    
                    />

                <!---->
                <Label 
                    Grid.Row="3"
                    Grid.Column="0"                    
                    Content="Итоговые обороты"                    
                    />

                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinalTurns, Mode=OneWay}"                    
                    />


                <Label 
                    Grid.Row="4"
                    Grid.Column="0"                    
                    Content="Результат"                    
                />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.Result, Mode=OneWay}"                    
                />

                <!--ВТОРАЯ КОЛОНКА-->

                <Label 
                    Grid.Row="1"
                    Grid.Column="2"                    
                    Content="Дата соединения"                    
                />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="3"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinishTimeStamp, Mode=OneWay}"                    
                />

                <Label 
                    Grid.Row="2"
                    Grid.Column="2"                    
                    Content="Рецепт"                    
                />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="3"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.Recipe.Name, Mode=OneWay}"                    
                />


            </Grid>


            <!--ГРАФИКИ -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ContentControl Grid.Row="0">
                    
                </ContentControl>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
