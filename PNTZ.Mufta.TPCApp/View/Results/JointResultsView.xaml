<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Results"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel"
             xmlns:view="clr-namespace:PNTZ.Mufta.TPCApp.View"
             xmlns:control="clr-namespace:PNTZ.Mufta.TPCApp.View.Control"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="PNTZ.Mufta.TPCApp.View.Results.JointResultsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodel:ResultsViewModel}}"
             >
    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <!--СПИСОК РЕЗУЛЬТАТОВ СЛЕВА-->
        <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}"
                Background="{StaticResource LightColor}">
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Label     
                    Grid.Row="0"
                    Content="Свинчивания"
                    FontSize="18"         
                    Margin="4"
                    BorderThickness="0"                                        
                    />

                <Border  Grid.Column="1" Margin="5" BorderBrush="{StaticResource GridColor}" >
                    <Button BorderThickness="0" BorderBrush="{StaticResource GridColor}"
                        Background="{StaticResource LightColor}"
                        Command="{Binding RefreshCommand}"                     
                        >
                        <StackPanel  Orientation="Horizontal">
                            <Label FontSize="14" Content="♻️"/>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row = "0" BorderBrush="{StaticResource GridColor}"
                    BorderThickness="0,0,0,1"
                    Padding="5,0,5,5"
                    >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ComboBox
                        Grid.Row="0"
                        x:Name="RecipeComboBox"
                        Loaded="MyComboBox_Loaded"
                        IsEditable="True"
                        StaysOpenOnEdit="True"
                        IsTextSearchEnabled="True"
                        Height="30"                         
                        BorderThickness="0"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"                        
                        ItemsSource="{Binding FilteredRecipeNames}" 
                        SelectedItem="{Binding SelectedRecipeName, Mode=TwoWay}" 
                        Margin="0,0,0,5"
                        />
                    <Label
                        Grid.Row="0"
                        x:Name="RecipeNameWatermark"
                        TextBlock.FontStyle="Italic"
                        TextBlock.Foreground="Gray"                        
                        VerticalAlignment="Center"
                        IsHitTestVisible="False"
                        Content="Выберите наименование рецепта"  
                        Margin="5,0,0,0"
                    />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker Grid.Column="0" BorderThickness="0" HorizontalAlignment="Center" SelectedDate="{Binding SearchStartDate}" Focusable="False" />

                        <DatePicker Grid.Column="1" BorderThickness="0" HorizontalAlignment="Center" SelectedDate="{Binding SearchEndDate}" Focusable="False"/>


                        <Button Grid.Column="2" Background="Transparent" BorderThickness="0" Margin="0, 0, 5, 0" Content="Поиск 🔎" Command="{Binding GetResultCommand}"/>
                    </Grid>

                </Grid>
            </Border>


            <ListBox Grid.Row="1" ItemsSource="{Binding Results}" SelectedItem="{Binding SelectedResult}"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch"
                     SelectionMode="Extended"
                  >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="2" BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Label
                                                                                                                                                                                                                                
                                    Grid.Column="0"
                                    Content="{Binding Result}"
                                    Background="Transparent"/>

                                <Label                                                                                                                                             
                                    Grid.Column="1"                                    
                                    Background="Transparent">
                                    <TextBlock Text="{Binding FinishTimeStamp, StringFormat=\{0:dd.MM.yyyy HH:mm\}}" />
                                </Label>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>


        <!--РАЗДЕЛИТЕЛЬ-->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                Margin="0,0,0,-5"
            BorderThickness="0,0,1,0" BorderBrush="{StaticResource GridColor}"/>

        <!--****************************************** РЕЗУЛЬТАТЫ **************************************************************-->
        <Grid Grid.Row="0" Grid.Column="2">
            <Border BorderThickness="0,0,0,1" BorderBrush="{StaticResource GridColor}" Background="{StaticResource LightColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label                 
                        Grid.Column="0"
                        Content="Детали свинчивания"
                        FontSize="18"
                        Margin="4"
                        BorderThickness="0"                        
                        />
                    <Label
                        Grid.Column="1"
                        Content="{Binding SelectedResult.RecipeName}"
                        FontSize="18"
                        Margin="4"
                        FontWeight="SemiBold"
                        BorderThickness="0"/>
                </Grid>
            </Border>
        </Grid>

        <!--Фоновый текст-->
        <Label
                Grid.Row="1" Grid.Column="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="Выберите результат из списка слева"
                FontStyle="Italic"
                FontSize="18"
                Foreground="{StaticResource GridColor}"
                BorderThickness="0"
                          
                >
            <Label.Style>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ResultSelected}" Value="True">
                            <Setter Property="Visibility" Value="Hidden"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>


        <!-- РЕЗУЛЬТАТ -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ResultSelected}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!--ПАРАМЕТРЫ-->
            <Grid Grid.Row="0">
                <Grid.Resources>
                    <Style x:Key="ParaFieldStyle" TargetType="{x:Type TextBox}">
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="IsReadOnly" Value="True"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Margin" Value="10,0,0,0"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>


                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!---->
                <Label 
                    Grid.Row="0"
                    Grid.Column="0"                    
                    Content="Режим свинчивания"                    
                    />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"                      
                    Style="{StaticResource ParaFieldStyle}"               
                    Text="{Binding SelectedResult.SelectedMode, Mode=OneWay}"
                    />

                <!---->
                <Label 
                    Grid.Row="1"
                    Grid.Column="0"                    
                    Content="Итоговый момент"                    
                    />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinalTorque, Mode=OneWay}"                    
                    />


                <!---->
                <Label 
                    Grid.Row="2"
                    Grid.Column="0"                    
                    Content="Итоговая длина"                    
                    />

                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinalLength, Mode=OneWay}"                    
                    />

                <!---->
                <Label 
                    Grid.Row="3"
                    Grid.Column="0"                    
                    Content="Итоговые обороты"                    
                    />

                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinalTurns, Mode=OneWay}"                    
                    />


                <Label 
                    Grid.Row="4"
                    Grid.Column="0"                    
                    Content="Результат"                    
                />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.Result, Mode=OneWay}"                    
                />

                <!--ВТОРАЯ КОЛОНКА-->

                <Label 
                    Grid.Row="1"
                    Grid.Column="2"                    
                    Content="Дата соединения"                    
                />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="3"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.FinishTimeStamp, Mode=OneWay}"                    
                />

                <Label 
                    Grid.Row="2"
                    Grid.Column="2"                    
                    Content="Рецепт"                    
                />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="3"                    
                    Style="{StaticResource ParaFieldStyle}"
                    Text="{Binding SelectedResult.Recipe.Name, Mode=OneWay}"                    
                />


            </Grid>


            <ScrollViewer Grid.Row="1">
                <!--ГРАФИКИ -->
                <Grid Grid.Row="1">
                    <Grid.Resources>
                        <Style TargetType="{x:Type Label}" x:Key="ChartHeader">
                            <Setter Property="Grid.Row" Value="0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="0,10,0,-5"/>
                        </Style>

                        <Style TargetType="{x:Type dxc:ChartControl}" x:Key="ChartStyle">
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>

                        <Style TargetType="{x:Type dxc:XYDiagram2D}" x:Key="DiagramStyle"/>

                        <Style TargetType="{x:Type dxc:Pane}" x:Key="PaneStyle">
                            <Setter Property="DomainBrush" Value="Transparent"/>
                        </Style>

                        <Style TargetType="{x:Type dxc:AxisX2D}" x:Key="AxisXStyle">
                            <Setter Property="GridLinesVisible" Value="True"/>
                            <Setter Property="GridLinesBrush" Value="#F0F0F0"/>
                        </Style>

                        <Style TargetType="{x:Type dxc:AxisY2D}" x:Key="AxisYStyle">
                            <Setter Property="GridLinesVisible" Value="True"/>
                            <Setter Property="GridLinesBrush" Value="#F0F0F0"/>
                            <Setter Property="Interlaced" Value="False"/>
                        </Style>

                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="600"/>
                        <RowDefinition Height="600"/>
                        <RowDefinition Height="600"/>
                        <RowDefinition Height="600"/>
                    </Grid.RowDefinitions>

                    <!--Момент/обороты-->
                    <ContentControl Grid.Row="0">
                        <control:RealtimeChartView
                                ChartTitle="Момент/обороты"
                                ChartData="{Binding SelectedResult.Series}"
                                ArgumentMember="Turns"
                                ValueMember="Torque"
                                XMin="{Binding TorqueTurnsChartConfig.XMinValue}"
                                XMax="{Binding TorqueTurnsChartConfig.XMaxValue}"
                                YMin="{Binding TorqueTurnsChartConfig.YMinValue}"
                                YMax="{Binding TorqueTurnsChartConfig.YMaxValue}"
                                XGridSpacing="{Binding TorqueTurnsChartConfig.XGridSpacing}"
                                YGridSpacing="{Binding TorqueTurnsChartConfig.YGridSpacing}"
                                LineColor="Black"
                                LineThickness="2"
                                ResetZoomTrigger="{Binding ResetZoomTrigger}">

                            <control:RealtimeChartView.YConstantLines>
                                <control:ConstantLineModel Value="{Binding DataContext.SelectedResult.Recipe.MU_Tq_Max, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            Label="Макс." Color="DarkRed"/>
                                <control:ConstantLineModel Value="{Binding DataContext.SelectedResult.Recipe.MU_Tq_Min, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            Label="Мин." Color="DarkRed"/>
                                <control:ConstantLineModel Value="{Binding DataContext.SelectedResult.Recipe.MU_Tq_Opt, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                            Label="Опт." Color="DarkRed"/>
                            </control:RealtimeChartView.YConstantLines>

                        </control:RealtimeChartView>
                    </ContentControl>


                    <!--Обороты/Обороты в минуту -->
                    <ContentControl Grid.Row="1">
                        <control:RealtimeChartView
                                ChartTitle="(Обороты/Мин)/обороты"
                                ChartData="{Binding SelectedResult.Series}"
                                ArgumentMember="Turns"
                                ValueMember="TurnsPerMinute"
                                XMin="{Binding TurnsPerMinuteTurnsChartConfig.XMinValue}"
                                XMax="{Binding TurnsPerMinuteTurnsChartConfig.XMaxValue}"
                                YMin="{Binding TurnsPerMinuteTurnsChartConfig.YMinValue}"
                                YMax="{Binding TurnsPerMinuteTurnsChartConfig.YMaxValue}"
                                XGridSpacing="{Binding TurnsPerMinuteTurnsChartConfig.XGridSpacing}"
                                YGridSpacing="{Binding TurnsPerMinuteTurnsChartConfig.YGridSpacing}"
                                LineColor="Black"
                                LineThickness="2"
                                ResetZoomTrigger="{Binding ResetZoomTrigger}">
                        </control:RealtimeChartView>
                    </ContentControl>

                    <!--Момент/Длина-->
                    <ContentControl Grid.Row="2">
                        <control:RealtimeChartView
                            ChartTitle="Момент/длина"
                            ChartData="{Binding SelectedResult.Series}"
                            ArgumentMember="Length"
                            ValueMember="Torque"
                            XMin="{Binding TorqueLengthChartConfig.XMinValue}"
                            XMax="{Binding TorqueLengthChartConfig.XMaxValue}"
                            YMin="{Binding TorqueLengthChartConfig.YMinValue}"
                            YMax="{Binding TorqueLengthChartConfig.YMaxValue}"
                            XGridSpacing="{Binding TorqueLengthChartConfig.XGridSpacing}"
                            YGridSpacing="{Binding TorqueLengthChartConfig.YGridSpacing}"
                            LineColor="Black"
                            LineThickness="2"
                            ResetZoomTrigger="{Binding ResetZoomTrigger}">          

                            <control:RealtimeChartView.YConstantLines>
                                <control:ConstantLineModel Value="{Binding DataContext.SelectedResult.Recipe.MU_Tq_Max, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    Label="Макс." Color="DarkRed"/>
                                <control:ConstantLineModel Value="{Binding DataContext.SelectedResult.Recipe.MU_Tq_Min, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Label="Мин." Color="DarkRed"/>
                            </control:RealtimeChartView.YConstantLines>

                            <control:RealtimeChartView.XConstantLines>
                                <control:ConstantLineModel Value="{Binding DataContext.SelectedResult.Recipe.MU_Len_Max, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    Label="Макс." Color="DarkRed"/>
                                <control:ConstantLineModel Value="{Binding DataContext.SelectedResult.Recipe.MU_Len_Min, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    Label="Мин." Color="DarkRed"/>
                            </control:RealtimeChartView.XConstantLines>

                        </control:RealtimeChartView>

                    </ContentControl>


                    <!--Момент/Время-->
                    <ContentControl Grid.Row="3">
                        <control:RealtimeChartView
                             ChartTitle="Момент/Время"
                             ChartData="{Binding SelectedResult.Series}"
                             ArgumentMember="TimeStamp"
                             ValueMember="Torque"
                             XMin="{Binding TorqueTimeChartConfig.XMinValue}"
                             XMax="{Binding TorqueTimeChartConfig.XMaxValue}"
                             YMin="{Binding TorqueTimeChartConfig.YMinValue}"
                             YMax="{Binding TorqueTimeChartConfig.YMaxValue}"
                             XGridSpacing="{Binding TorqueTimeChartConfig.XGridSpacing}"
                             YGridSpacing="{Binding TorqueTimeChartConfig.YGridSpacing}"
                             LineColor="Black"
                             LineThickness="2"
                             ResetZoomTrigger="{Binding ResetZoomTrigger}">
                        </control:RealtimeChartView>
                    </ContentControl>


                </Grid>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
