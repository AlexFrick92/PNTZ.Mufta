<UserControl x:Class="PNTZ.Mufta.TPCApp.View.Control.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PNTZ.Mufta.TPCApp.View.Control"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800"
             xmlns:viewmodel="clr-namespace:PNTZ.Mufta.TPCApp.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:StatusBarViewModel}"
             >


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/View/Styles/AppStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <!-- Тексты -->
            <Style TargetType="Label" x:Key="StatusBarLabel">
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="White" />
            </Style>
            <Style TargetType="Label" x:Key="StatusBarOutputLabel" BasedOn="{StaticResource StatusBarLabel}">
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <!-- Индикаторы -->
            <Style TargetType="Ellipse" x:Key="IdicatorStyle">
                <Setter Property="Stroke" Value="Gray"/>
                <Setter Property="StrokeThickness" Value="1"/>
            </Style>
            
        </Grid.Resources>
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="DimGray"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding JointInProgress}" Value="True">
                        <Setter Property="Background" Value="LightGreen"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        
        <!-- СТАТУС СВИНЧИВАНИЕ -->
        <StackPanel Grid.Column="1" Orientation="Horizontal"
                    Margin="8,0,0,0"
                    VerticalAlignment="Center">
            <Label Content="" 
                   Style="{StaticResource StatusBarLabel}"
                   />


            <Label          
                HorizontalAlignment="Center"                      
                Content="Идёт процесс свинчивания: ">
                <Label.Style>
                    <Style TargetType="Label" BasedOn="{StaticResource StatusBarOutputLabel}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding JointInProgress}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

            <Label
                Content="{Binding JointStatus}"
                Style="{StaticResource StatusBarLabel}">
                
            </Label>
        </StackPanel>

        <!-- ЗАГРУЖЕННЫЙ РЕЦЕПТ -->
        <StackPanel Grid.Column="0" Orientation="Horizontal"
                    Margin="8,0,8,0"
                    VerticalAlignment="Center">
            <Label Content="Рецепт:" 
                   Style="{StaticResource StatusBarLabel}"
                   />
            
            <Label          
                HorizontalAlignment="Center">
                <Label.Style>
                    <Style TargetType="Label" BasedOn="{StaticResource StatusBarOutputLabel}">
                        <Setter Property="Content" Value="не загружен"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RecipeLoaded}" Value="True">
                                <Setter Property="Content" Value="{Binding LoadedRecipe.Name}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
        </StackPanel>
        
        
        <!-- СТАТУС ПОДКЛЮЧЕНИЯ -->
        <StackPanel Grid.Column="4" Orientation="Horizontal"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center">
    
            
            <Label Content="Соединение ПЛК:"
                   Style="{StaticResource StatusBarLabel}"
                   />

            <Label          
                HorizontalAlignment="Center"
                FontWeight="Bold"
                >
                
                <Label.Style>
                    <Style TargetType="Label" BasedOn="{StaticResource StatusBarOutputLabel}">
                        <Setter Property="Content" Value="НЕ ПОДКЛЮЧЕНО"/>
                        <Setter Property="Foreground" Value="Red"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PlcConnected}" Value="True">
                                <Setter Property="Content" Value="ПОДКЛЮЧЕНО"/>
                                <Setter Property="Foreground" Value="LimeGreen"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

            <Label Content="Бит жизни:"
                   Style="{StaticResource StatusBarLabel}"
            />

            <!-- Круг -->
            <Ellipse Width="20" Height="20" VerticalAlignment="Center"
                     Margin="0,0,10,0"                     
                     >
                <Ellipse.Style>
                    <Style TargetType="Ellipse" BasedOn="{StaticResource IdicatorStyle}">
                        <Setter Property="Fill" Value="{StaticResource GridColor}"/>
                        <Style.Triggers>
                            <!-- Триггер для запуска анимации, если свойство во ViewModel true -->
                            <DataTrigger Binding="{Binding PlcHeartbeat}" Value="True">
                                <Setter Property="Fill" Value="LimeGreen"/>

                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>


            <Label Content="Тензодатчик:"
                   Style="{StaticResource StatusBarLabel}"
            />
            <!-- Круг тензодатчик -->
            <Ellipse Width="20" Height="20" VerticalAlignment="Center"
                     Margin="0,0,4,0"                     
            >
                <Ellipse.Style>
                    <Style TargetType="Ellipse" BasedOn="{StaticResource IdicatorStyle}">
                        <Setter Property="Fill" Value="{StaticResource GridColor}"/>
                        <Style.Triggers>
                            <!-- Триггер для запуска анимации, если свойство во ViewModel true -->
                            <DataTrigger Binding="{Binding SensorAedOk}" Value="True">
                                <Setter Property="Fill" Value="LimeGreen"/>

                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>

            <Label Content="Обороты:"
                   Style="{StaticResource StatusBarLabel}"
            />
            <!-- Круг датчик оборотов -->
            <Ellipse Width="20" Height="20" VerticalAlignment="Center"
                     Margin="0,0,4,0"                     
            >
                <Ellipse.Style>
                    <Style TargetType="Ellipse" BasedOn="{StaticResource IdicatorStyle}">
                        <Setter Property="Fill" Value="{StaticResource GridColor}"/>
                        <Style.Triggers>
                            <!-- Триггер для запуска анимации, если свойство во ViewModel true -->
                            <DataTrigger Binding="{Binding SensorRotateOk}" Value="True">
                                <Setter Property="Fill" Value="LimeGreen"/>

                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>

            <Label Content="Перемещение:"
                   Style="{StaticResource StatusBarLabel}"
            />
            <!-- Круг датчик перемещения-->
            <Ellipse Width="20" Height="20" VerticalAlignment="Center"
                     Margin="0,0,4,0"                     
            >
                <Ellipse.Style>
                    <Style TargetType="Ellipse" BasedOn="{StaticResource IdicatorStyle}">
                        <Setter Property="Fill" Value="{StaticResource GridColor}"/>
                        <Style.Triggers>
                            <!-- Триггер для запуска анимации, если свойство во ViewModel true -->
                            <DataTrigger Binding="{Binding SensorLengthOk}" Value="True">
                                <Setter Property="Fill" Value="LimeGreen"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Ellipse.Style>
            </Ellipse>








        </StackPanel>

    </Grid>
</UserControl>
