<!-- Дефолтные цвета приложения -->
<!-- Этот файл компилируется в сборку и всегда доступен -->
<!-- Для кастомизации создайте Config/AppColors.xaml с нужными переопределениями -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- Графики: Границы допусков (ConstantLines) -->
    <!-- ========================================== -->

    <SolidColorBrush x:Key="ChartLimitMin_Line" Color="LimeGreen" Opacity="0.3"/>
    <SolidColorBrush x:Key="ChartLimitMin_Label" Color="LimeGreen"/>

    <SolidColorBrush x:Key="ChartLimitMax_Line" Color="LimeGreen" Opacity="0.3"/>
    <SolidColorBrush x:Key="ChartLimitMax_Label" Color="LimeGreen"/>

    <SolidColorBrush x:Key="ChartLimitOptimal_Line" Color="DarkGreen"/>
    <SolidColorBrush x:Key="ChartLimitOptimal_Label" Color="DarkGreen"/>

    <SolidColorBrush x:Key="ChartLimitDump_Line" Color="DarkGray"/>
    <SolidColorBrush x:Key="ChartLimitDump_Label" Color="DarkGray"/>

    <!-- ========================================== -->
    <!-- Графики: Длина (Length)                   -->
    <!-- ========================================== -->

    <SolidColorBrush x:Key="ChartLengthMin_Line" Color="LimeGreen" Opacity="0.3"/>
    <SolidColorBrush x:Key="ChartLengthMin_Label" Color="LimeGreen"/>

    <SolidColorBrush x:Key="ChartLengthMax_Line" Color="LimeGreen" Opacity="0.3"/>
    <SolidColorBrush x:Key="ChartLengthMax_Label" Color="LimeGreen"/>

    <SolidColorBrush x:Key="ChartLengthDump_Line" Color="DarkGray" Opacity="0.3"/>
    <SolidColorBrush x:Key="ChartLengthDump_Label" Color="DarkGray"/>

    <!-- ========================================== -->
    <!-- Графики: Буртик (Shoulder)                -->
    <!-- ========================================== -->

    <SolidColorBrush x:Key="ChartShoulderMin_Line" Color="DarkOrange" Opacity="0.3"/>
    <SolidColorBrush x:Key="ChartShoulderMin_Label" Color="DarkOrange"/>

    <SolidColorBrush x:Key="ChartShoulderMax_Line" Color="DarkOrange" Opacity="0.3"/>
    <SolidColorBrush x:Key="ChartShoulderMax_Label" Color="DarkOrange"/>

    <!-- ========================================== -->
    <!-- Графики: Выделенные области (Strips)      -->
    <!-- ========================================== -->

    <SolidColorBrush x:Key="ChartStripTorque" Color="LightGreen" Opacity="0.1"/>
    <SolidColorBrush x:Key="ChartStripLength" Color="LightGreen" Opacity="0.1"/>
    <SolidColorBrush x:Key="ChartStripShoulder" Color="OrangeRed" Opacity="0.1"/>

    <!-- ========================================== -->
    <!-- Графики: Заголовки осей                   -->
    <!-- ========================================== -->

    <SolidColorBrush x:Key="ChartAxisX_Foreground" Color="Black"/>
    <SolidColorBrush x:Key="ChartAxisY_Foreground" Color="Black"/>

    <!-- ========================================== -->
    <!-- Графики: Цвета линий серий данных         -->
    <!-- ========================================== -->

    <!-- График: Момент/Обороты -->
    <SolidColorBrush x:Key="ChartTorqueTurns_Line" Color="#2E86DE"/>
    <!-- Синий -->

    <!-- График: Обороты в минуту/Обороты -->
    <SolidColorBrush x:Key="ChartTurnsPerMinute_Line" Color="#10AC84"/>
    <!-- Зеленый -->

    <!-- График: Момент/Длина -->
    <SolidColorBrush x:Key="ChartTorqueLength_Line" Color="#EE5A6F"/>
    <!-- Красный -->

    <!-- График: Момент/Время -->
    <SolidColorBrush x:Key="ChartTorqueTime_Line" Color="#9B59B6"/>
    <!-- Фиолетовый -->

</ResourceDictionary>
