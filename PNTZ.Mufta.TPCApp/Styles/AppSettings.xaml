<!-- Дефолтные настройки приложения -->
<!-- Этот файл компилируется в сборку и всегда доступен -->
<!-- Для кастомизации создайте Config/AppSettings.xaml с нужными переопределениями -->

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ========================================== -->
    <!-- Графики: Настройки отображения            -->
    <!-- ========================================== -->

    <!-- Отступ для границ графиков (10% = 0.05) -->
    <sys:Double x:Key="ChartMargin">0.05</sys:Double>

    <!-- Интервал обновления графиков в миллисекундах -->
    <sys:Int32 x:Key="ChartUpdateInterval">25</sys:Int32>

    <!-- Интервал обновления данных в миллисекундах -->
    <sys:Int32 x:Key="DataUpdateInterval">75</sys:Int32>

    <!-- Частота обновления границ графиков (через каждые N точек) -->
    <sys:Int32 x:Key="ChartBoundsUpdateFrequency">10</sys:Int32>

</ResourceDictionary>
