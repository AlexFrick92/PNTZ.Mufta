<Application x:Class="PNTZ.Mufta.Showcase.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PNTZ.Mufta.Showcase"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Подключаем цвета из основного проекта TPCApp -->
                <ResourceDictionary Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/Styles/AppColors.xaml"/>
                <!-- Подключаем настройки шрифтов из основного проекта TPCApp -->
                <ResourceDictionary Source="pack://application:,,,/PNTZ.Mufta.TPCApp;component/Styles/AppFonts.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
