<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.JointProcessChartViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:joint="clr-namespace:PNTZ.Mufta.TPCApp.View.Joint;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование JointProcessChartView"
        Height="800" Width="1500"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">
            <TextBlock Text="JointProcessChartView - Проверка разметки"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"/>
        </Border>

        <!-- Контрол для тестирования -->
        <Border Grid.Row="1"
                Margin="10"
                BorderBrush="#DEE2E6"
                BorderThickness="1">
            <joint:JointProcessChartView x:Name="JointChartView"/>
        </Border>
    </Grid>
</Window>
