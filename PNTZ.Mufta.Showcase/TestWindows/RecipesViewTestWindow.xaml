<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.RecipesViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:recipe="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование RecipesView"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">
            <StackPanel>
                <TextBlock Text="RecipesView - Тестирование управления рецептами"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <!-- Статус -->
                <Border Background="#D5F4E6"
                        BorderBrush="#27AE60"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="8"
                        Margin="0,5,0,0">
                    <TextBlock x:Name="StatusText"
                               Text="Готов к тестированию."
                               FontSize="12"
                               Foreground="#27AE60"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Контрол для тестирования -->
        <Border Grid.Row="1"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,1,1"
                Margin="15"
                Background="White">
            <recipe:RecipesView x:Name="RecipesView"/>
        </Border>
    </Grid>
</Window>
