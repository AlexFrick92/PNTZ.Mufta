<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.ChartViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:PNTZ.Mufta.TPCApp.View.Control;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование ChartView"
        Height="850" Width="1500"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">

            <StackPanel Orientation="Vertical">

                <!-- Заголовок -->
                <TextBlock Text="ChartView - Тестирование графика крутящего момента"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,15"/>

                <!-- Кнопки управления -->
                <WrapPanel>
                    <!-- Группа: Тестовые данные -->
                    <GroupBox Header="Тестовые данные"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnRealisticData"
                                    Content="Реалистичные данные"
                                    Click="LoadRealisticData_Click"
                                    Width="160"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnSineWave"
                                    Content="Синусоида"
                                    Click="LoadSineWave_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLinearData"
                                    Content="Линейный рост"
                                    Click="LoadLinearData_Click"
                                    Width="120"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnRandomData"
                                    Content="Случайные"
                                    Click="LoadRandomData_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnClearData"
                                    Content="Очистить"
                                    Click="ClearData_Click"
                                    Width="90"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Группа: Real-time симуляция -->
                    <GroupBox Header="Real-time симуляция"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnStart"
                                    Content="▶ Старт"
                                    Click="StartRealtime_Click"
                                    Width="90"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnPause"
                                    Content="⏸ Пауза"
                                    Click="PauseRealtime_Click"
                                    Width="90"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnStop"
                                    Content="⏹ Стоп"
                                    Click="StopRealtime_Click"
                                    Width="90"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Группа: Константные линии -->
                    <GroupBox Header="Константные линии"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="+ X линия"
                                    Click="AddXLine_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#34495E"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button Content="+ Y линия"
                                    Click="AddYLine_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#34495E"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button Content="Очистить линии"
                                    Click="ClearLines_Click"
                                    Width="130"
                                    Padding="8,5"
                                    Background="#95A5A6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Группа: Параметры (в отдельной строке) -->
                    <GroupBox Header="Параметры"
                          Margin="0,0,0,10"
                          Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Скорость (ед/сек):"
                               VerticalAlignment="Center"
                               FontSize="13"/>
                        <TextBox x:Name="SpeedTextBox"
                                 Text="10"
                                 Width="60"
                                 Margin="5,0,15,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 ToolTip="Скорость изменения графика (единиц по оси X в секунду)"/>

                        <Label Content="Интервал (мс):"
                               VerticalAlignment="Center"
                               FontSize="13"/>
                        <TextBox x:Name="IntervalTextBox"
                                 Text="50"
                                 Width="60"
                                 Margin="5,0,20,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 ToolTip="Частота обновления графика (детализация)"/>

                        <Label Content="X Min:"
                               VerticalAlignment="Center"
                               FontSize="13"/>
                        <TextBox x:Name="XMinTextBox"
                                 Text="0"
                                 Width="60"
                                 Margin="5,0,10,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 TextChanged="AxisParameter_TextChanged"/>

                        <Label Content="X Max:"
                               VerticalAlignment="Center"
                               FontSize="13"/>
                        <TextBox x:Name="XMaxTextBox"
                                 Text="50"
                                 Width="60"
                                 Margin="5,0,20,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 TextChanged="AxisParameter_TextChanged"/>

                        <Label Content="Y Min:"
                               VerticalAlignment="Center"
                               FontSize="13"/>
                        <TextBox x:Name="YMinTextBox"
                                 Text="0"
                                 Width="60"
                                 Margin="5,0,10,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 TextChanged="AxisParameter_TextChanged"/>

                        <Label Content="Y Max:"
                               VerticalAlignment="Center"
                               FontSize="13"/>
                        <TextBox x:Name="YMaxTextBox"
                                 Text="10000"
                                 Width="60"
                                 Margin="5,0,15,0"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="5"
                                 TextChanged="AxisParameter_TextChanged"/>

                        <Button x:Name="BtnResetZoom"
                                Content="Сброс зума"
                                Click="ResetZoom_Click"
                                Width="100"
                                Padding="8,5"
                                Background="#34495E"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>
                </GroupBox>
                </WrapPanel>

                <!-- Статус -->
                <Border Background="#D5F4E6"
                        BorderBrush="#27AE60"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="8"
                        Margin="0,5,0,0">
                    <TextBlock x:Name="StatusText"
                               Text="Готов к тестированию. Выберите тип данных для загрузки."
                               FontSize="12"
                               Foreground="#27AE60"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- График -->
        <Border Grid.Row="1"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,1,1"
                Margin="15"
                Background="White">
            <control:ChartView x:Name="ChartView"/>
        </Border>
    </Grid>
</Window>
