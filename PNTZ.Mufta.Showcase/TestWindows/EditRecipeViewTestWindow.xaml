<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.EditRecipeViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:recipe="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование EditRecipeView"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
    <!-- Заголовок -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">
            <StackPanel>
                <TextBlock Text="EditRecipeView - Тестирование редактирования рецепта"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <WrapPanel>
                    <!-- Группа: Тестовые рецепты -->
                    <GroupBox Header="Тестовые рецепты"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnLoadRecipeLength"
                                    Content="Length"
                                    Click="BtnLoadRecipeLength_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#3498DB"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorque"
                                    Content="Torque"
                                    Click="BtnLoadRecipeTorque_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#9B59B6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorqueLength"
                                    Content="Torque+Length"
                                    Click="BtnLoadRecipeTorqueLength_Click"
                                    Width="130"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#E67E22"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorqueShoulder"
                                    Content="Torque+Shoulder"
                                    Click="BtnLoadRecipeTorqueShoulder_Click"
                                    Width="150"
                                    Padding="8,5"
                                    Background="#16A085"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>
                </WrapPanel>

                <!-- Статус -->
                <Border Background="#D5F4E6"
                        BorderBrush="#27AE60"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="8"
                        Margin="0,5,0,0">
                    <TextBlock x:Name="StatusText"
                               Text="Готов к тестированию."
                               FontSize="12"
                               Foreground="#27AE60"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Контрол для тестирования -->
        <Border Grid.Row="1"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,1,1"
                Margin="15"
                Background="White">
            <recipe:EditRecipeView x:Name="EditRecipeView"/>
        </Border>
    </Grid>
</Window>
