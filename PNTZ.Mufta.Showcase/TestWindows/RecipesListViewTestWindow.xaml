<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.RecipesListViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:recipe="clr-namespace:PNTZ.Mufta.TPCApp.View.Recipe;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование RecipesListView"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">
            <StackPanel>
                <TextBlock Text="RecipesListView - Тестирование списка рецептов"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>

                <!-- Кнопка загрузки рецептов -->
                <Button x:Name="LoadRecipesButton"
                        Content="Загрузить тестовые рецепты"
                        Click="LoadRecipesButton_Click"
                        Padding="10,5"
                        Margin="0,0,0,5"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <!-- Кнопки добавления/удаления рецептов -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="ToggleRecipeAButton"
                            Content="Добавить рецепт А"
                            Click="ToggleRecipeAButton_Click"
                            Padding="10,5"
                            Margin="0,0,5,0"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>

                    <Button x:Name="ToggleRecipeBButton"
                            Content="Добавить рецепт Б"
                            Click="ToggleRecipeBButton_Click"
                            Padding="10,5"
                            Margin="0,0,0,0"
                            Background="#E67E22"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Выбранный рецепт -->
                <Border Background="#E8F4F8"
                        BorderBrush="#3498DB"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="8"
                        Margin="0,0,0,5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Выбранный рецепт: "
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="#2C3E50"/>
                        <TextBlock x:Name="SelectedRecipeNameText"
                                   Text="не выбран"
                                   FontSize="12"
                                   Foreground="#3498DB"/>
                    </StackPanel>
                </Border>

                <!-- Статус -->
                <Border Background="#D5F4E6"
                        BorderBrush="#27AE60"
                        BorderThickness="1"
                        CornerRadius="3"
                        Padding="8"
                        Margin="0,5,0,0">
                    <TextBlock x:Name="StatusText"
                               Text="Готов к тестированию."
                               FontSize="12"
                               Foreground="#27AE60"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Контрол для тестирования -->
        <Border Grid.Row="1"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,1,1"
                Margin="15"
                Background="White">
            <recipe:RecipesListView x:Name="RecipesListView"/>
        </Border>
    </Grid>
</Window>
