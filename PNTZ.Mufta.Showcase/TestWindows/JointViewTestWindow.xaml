<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.JointViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:joint="clr-namespace:PNTZ.Mufta.TPCApp.View.Joint;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование JointView"
        Height="700" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Grid.Column="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">
            <StackPanel>
                <TextBlock Text="JointView - Тестирование полного интерфейса процесса навёртки"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>
                <WrapPanel>
                    <!-- Группа: Тестовые рецепты -->
                    <GroupBox Header="Тестовые рецепты"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnLoadRecipeLength"
                                    Content="Length"
                                    Click="BtnLoadRecipeLength_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#3498DB"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorque"
                                    Content="Torque"
                                    Click="BtnLoadRecipeTorque_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#9B59B6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorqueLength"
                                    Content="Torque+Length"
                                    Click="BtnLoadRecipeTorqueLength_Click"
                                    Width="130"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#E67E22"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorqueShoulder"
                                    Content="Torque+Shoulder"
                                    Click="BtnLoadRecipeTorqueShoulder_Click"
                                    Width="150"
                                    Padding="8,5"
                                    Background="#16A085"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Группа: Симуляция данных -->
                    <GroupBox Header="Симуляция данных"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Интервал обновления:"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                            <TextBox x:Name="UpdateIntervalTextBox"
                                     Text="10"
                                     Width="60"
                                     Margin="5,0,10,0"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Padding="5"
                                     TextChanged="UpdateInterval_TextChanged"/>
                            <Button x:Name="BtnStartSimulation"
                                    Content="Старт симуляция"
                                    Click="BtnStartSimulation_Click"
                                    Width="160"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#27AE60"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnStopSimulation"
                                    Content="Стоп"
                                    Click="BtnStopSimulation_Click"
                                    Width="100"
                                    Padding="8,5"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>
                </WrapPanel>

                <!-- Статус -->
                <Border Background="#D5F4E6"
                    BorderBrush="#27AE60"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="8"
                    Margin="0,5,0,0">
                    <TextBlock x:Name="StatusText"
                           Text="Готов к тестированию. Загрузите рецепт, задайте интервал и запустите симуляцию."
                           FontSize="12"
                           Foreground="#27AE60"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Контрол для тестирования -->
        <Border Grid.Row="1" Grid.Column="0"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,1,1"
                Margin="15"
                Background="White">
            <joint:JointView x:Name="JointView"/>
        </Border>

        <!-- Панель с реальными данными справа -->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовок панели -->
                <StackPanel Grid.Row="0" Margin="15,15,15,10">
                    <TextBlock Text="Реальные данные из БД"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#2C3E50"
                               Margin="0,0,0,10"/>
                    <Button x:Name="BtnLoadDatabase"
                            Content="Загрузить базу данных"
                            Click="BtnLoadDatabase_Click"
                            Padding="10,8"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,10"/>
                    <TextBlock x:Name="DatabaseStatusText"
                               Text="База не загружена"
                               FontSize="11"
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Список результатов -->
                <ListBox x:Name="ResultsListBox"
                         Grid.Row="1"
                         Margin="15,0,15,15"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         SelectionChanged="ResultsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="Bold"
                                           FontSize="13"
                                           Foreground="#2C3E50"/>
                                <TextBlock FontSize="11" Foreground="#7F8C8D">
                                    <Run Text="Дата: "/>
                                    <Run Text="{Binding FinishTimeStamp, StringFormat='dd.MM.yyyy HH:mm:ss'}"/>
                                </TextBlock>
                                <TextBlock FontSize="11" Foreground="#7F8C8D">
                                    <Run Text="Момент: "/>
                                    <Run Text="{Binding FinalTorque, StringFormat='{}{0:F1} Nm'}"/>
                                    <Run Text=" | Длина: "/>
                                    <Run Text="{Binding FinalLength, StringFormat='{}{0:F3} м'}"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Window>
