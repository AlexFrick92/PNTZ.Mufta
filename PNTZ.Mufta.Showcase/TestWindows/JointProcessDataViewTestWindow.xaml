<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.JointProcessDataViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:joint="clr-namespace:PNTZ.Mufta.TPCApp.View.Joint;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование JointProcessDataView"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">
            <StackPanel>
                <TextBlock Text="JointProcessDataView - Тестирование отображения данных процесса"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>
                <WrapPanel>
                    <!-- Группа: Тестовые рецепты -->
                    <GroupBox Header="Тестовые рецепты"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BtnLoadRecipeLength"
                                    Content="Length"
                                    Click="BtnLoadRecipeLength_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#3498DB"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorque"
                                    Content="Torque"
                                    Click="BtnLoadRecipeTorque_Click"
                                    Width="100"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#9B59B6"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorqueLength"
                                    Content="Torque+Length"
                                    Click="BtnLoadRecipeTorqueLength_Click"
                                    Width="130"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#E67E22"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnLoadRecipeTorqueShoulder"
                                    Content="Torque+Shoulder"
                                    Click="BtnLoadRecipeTorqueShoulder_Click"
                                    Width="150"
                                    Padding="8,5"
                                    Background="#16A085"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Группа: Симуляция данных -->
                    <GroupBox Header="Симуляция данных"
                              Margin="0,0,15,10"
                              Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Интервал обновления:"
                                   VerticalAlignment="Center"
                                   FontSize="13"/>
                            <TextBox x:Name="UpdateIntervalTextBox"
                                     Text="0"
                                     Width="60"
                                     Margin="5,0,10,0"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     Padding="5"
                                     TextChanged="UpdateInterval_TextChanged"/>
                            <Button x:Name="BtnStartSimulation"
                                    Content="Старт симуляция"
                                    Click="BtnStartSimulation_Click"
                                    Width="160"
                                    Margin="0,0,5,0"
                                    Padding="8,5"
                                    Background="#27AE60"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                            <Button x:Name="BtnStopSimulation"
                                    Content="Стоп"
                                    Click="BtnStopSimulation_Click"
                                    Width="100"
                                    Padding="8,5"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </GroupBox>
                </WrapPanel>

                <!-- Статус -->
                <Border Background="#D5F4E6"
                    BorderBrush="#27AE60"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="8"
                    Margin="0,5,0,0">
                    <TextBlock x:Name="StatusText"
                           Text="Готов к тестированию. Задайте интервал и запустите симуляцию."
                           FontSize="12"
                           Foreground="#27AE60"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Контрол для тестирования -->
        <Border Grid.Row="1"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,1,1"
                Margin="15"
                Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <joint:JointProcessDataView x:Name="JointProcessDataView"/>
            </Grid>

        </Border>
    </Grid>
</Window>
