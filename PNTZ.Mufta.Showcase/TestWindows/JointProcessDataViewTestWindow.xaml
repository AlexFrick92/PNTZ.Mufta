<Window x:Class="PNTZ.Mufta.Showcase.TestWindows.JointProcessDataViewTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:joint="clr-namespace:PNTZ.Mufta.TPCApp.View.Joint;assembly=PNTZ.Mufta.TPCApp"
        Title="Тестирование JointProcessDataView"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="0,0,0,1"
                Padding="15">
            <StackPanel>
                <TextBlock Text="JointProcessDataView - Тестирование отображения данных процесса"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,10"/>
                <TextBlock Text="Проверка разметки контрола без интерактивности"
                           FontSize="13"
                           Foreground="#7F8C8D"/>
            </StackPanel>
        </Border>

        <!-- Контрол для тестирования -->
        <Border Grid.Row="1"
                BorderBrush="#DEE2E6"
                BorderThickness="1,0,1,1"
                Margin="15"
                Background="White">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <joint:JointProcessDataView x:Name="JointProcessDataView"/>
            </Grid>
            
        </Border>
    </Grid>
</Window>
